---
import "aos/dist/aos.css";
import "jarallax/dist/jarallax.min.css";
import Layout from "../../../layouts/internship.astro";
---

<Layout title="Internship Roles">
  <main class="page-wrapper">
    <!-- ancor tag in start -->
    <section class="position-relative">
      <div class="aboutVolunteering-frame1" id="responsiveNavContainer">
        <a
          style="font-family: Poppins; font-weight: 400; font-size: 14px; line-height: 100%; letter-spacing: 0%; color: #1E1E1E;"
          href="/"
        >
          &lt; Back to Home
        </a>
      </div>
    </section>

    <!-- Desktop image (visible on md+ only) -->
    <div
      class="thankyou-image1 flex items-center justify-center pt-[40px] pb-[28px] hidden md:flex"
    >
      <img src="https://placehold.co/400x400" alt="placeholder" />
    </div>

    <div class="aboutVolunteering-frame1">
      <div class="aboutVolunteering-frame2">
        <h1>Thank you for wanting to make a difference!</h1>

        <!-- Mobile image (visible on small screens only) -->
        <div
          class="thankyou-image2 flex items-center justify-center pt-[80px] pb-[48px] md:hidden"
        >
          <img src="https://placehold.co/400x400" alt="placeholder" />
        </div>

        <h2>
          We will review your application and reach out to you! In the mean
          time, meet our team:
        </h2>
      </div>
    </div>

    <!-- a component will be added here showing whole team -->
  </main>
  <a
    class="btn-scroll-top"
    href="#top"
    data-scroll
    aria-label="Scroll back to top"
  >
    <svg
      viewBox="0 0 40 40"
      fill="currentColor"
      xmlns="http://www.w3.org/2000/svg"
    >
      <circle
        cx="20"
        cy="20"
        r="19"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-miterlimit="10"></circle>
    </svg>
    <i class="ai-arrow-up"></i>
  </a>
</Layout>
