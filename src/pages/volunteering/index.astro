---
import "aos/dist/aos.css";
import "jarallax/dist/jarallax.min.css";
import Layout from "../../layouts/Layout.astro";
import ChooseVolunteering from "../../components/volunteer/ChooseVolunteering.astro";
import TestimonialsCarousel from "../../components/common/TestimonialsCarousel.astro";
import WhyVolunteer from "../../components/volunteer/WhyVolunteer.astro";
import WhyIntern from "../../components/volunteer/WhyIntern.astro";
import Hero from "../../components/pratibha/Hero.astro";
import Faq from "../../components/common/FaqPratibha.astro";
import Breadcrumb from "../../components/pratibha/Breadcrumb.astro";
import ContentSection from "../../components/volunteer/ContentSection.astro";
---

<Layout>
  <main class="page-wrapper">



<Breadcrumb url={Astro.url} />

    <Hero collection="volunteering" slug="hero-volunteer" />

    <!-- <ContentSection
      collection="volunteering"
      slug="why-volunteer"
      classes="space-y-24"
      textAlignment="order-2"
      imageAlignment="order-1"
   />

    <ContentSection
      collection="volunteering"
      slug="why-intern"
      classes="space-y-24"
      textAlignment="order-1"
      imageAlignment="order-2"
    /> -->

    <WhyVolunteer 
    collection="volunteering"
      slug="why-volunteer"
     
      textAlignment="order-2"
      imageAlignment="order-1"
     /> 

     <ChooseVolunteering fetch="volunteer"/>
  
     <WhyIntern
     collection="volunteering"
      slug="why-intern"
      
      textAlignment="order-1"
      imageAlignment="order-2"
      />
      <ChooseVolunteering fetch="internship"/>

    


    <!-- <ChooseVolunteering fetch="internship" /> -->
    <section class="flex items-center justify-center  mt-[120px] md:mt-[120px] mb-20 lg:mt-28 lg:mb-[120px]">
      <h1
        class="font-merriweather font-normal text-center leading-[150%] tracking-[-2.2%] text-[30px] sm:text-[40px] md:text-[48px] w-[292px] lg:w-[1296px] lg:h-[72px]">
        Breaking Barriers Together
      </h1>
    </section>
    

    <TestimonialsCarousel pageTag="home" />
    
    <div class="w-[342px] h-[108px] lg:w-[1296px] lg:h-[406px] rounded-[8px] mx-auto mt-[120px] mb-[184px] overflow-hidden">
      <img 
        src="/assets/images/volunter/work-with-us-bottom-img.jpeg" 
        class="w-full h-full object-cover object-[50%_107%]"
      />
    </div>
    
    
    
    
    
  

    <Faq collection="volunteering" slug="faq"/>
  </main>

  <a
    class="btn-scroll-top"
    href="#top"
    data-scroll
    aria-label="Scroll back to top"
  >
    <svg
      viewBox="0 0 40 40"
      fill="currentColor"
      xmlns="http://www.w3.org/2000/svg"
    >
      <circle
        cx="20"
        cy="20"
        r="19"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-miterlimit="10"></circle>
    </svg>
    <i class="ai-arrow-up"></i>
  </a>
</Layout>
