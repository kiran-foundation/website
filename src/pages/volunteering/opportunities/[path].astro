---
import { getEntry } from "astro:content";
import Layout from "../../../layouts/Layout.astro";
import Head from "../../../components/opportunities/Head.astro";
import Category from "../../../components/opportunities/Category.astro";

const { path } = Astro.params;

export async function getStaticPaths() {
  const filtersEntry = await getEntry("opportunities", "filters");
  const filters = filtersEntry.data.filters;

  return filters.map((filter) => ({
    params: { path: filter }
  }));
}
---

<Layout>
  <Head />
  <Category prop={path} />
</Layout>
