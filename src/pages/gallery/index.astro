---
import { getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

const albums = await getCollection("albums");
const headings = await getEntry("common","headings");
// console.log(albums);
---

<Layout title="Gallery">
  <div style="padding-top: 120px;">
    <!-- <Gallery /> -->
    <div class="text-center">
      <h1 class="text-5xl font-bold heading-1 mb-5">{headings.data.gallery}</h1>
      
    </div>
    <div class="mx-auto container max-w-screen-sm grid grid-cols-2 gap-8">
      {
        albums.map((item) => (
          <a
            href={`/gallery/${item.id}`}
            class="group transition-all mb-4 block"
          >
            <img
              src={item.data.cover}
              alt={item.data.title}
              width="720"
              height="480"
              class="rounded-lg transition-all group-hover:shadow-lg group-hover:opacity-90"
              loading="lazy"
            />
            <div class="mt-4 text-center text-neutral-800 body-text-1">
              <strong class="font-normal">{item.data.title}</strong>
              <p class="text-xs">{item.data.description}</p>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</Layout>
