---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const albums = await getCollection("albums");

// Function to get correct image paths
function getImagePath(relativePath: string) {
  return relativePath.startsWith('/') 
    ? relativePath 
    : `/${relativePath}`;
}
---

<Layout title="Gallery">
  <div style="padding-top: 120px;">
    <div class="text-center">
      <h1 class="text-5xl font-bold heading-1">Photo Gallery</h1>
      <p class="text-xl my-4 body-text-1">A collection of my photos</p>
    </div>
    <div class="mx-auto container max-w-screen-sm grid grid-cols-2 gap-8">
      {
        albums.map((item) => {
          const coverPath = getImagePath(item.data.cover);
          return (
            <a
              href={`/gallery/${item.id}`}
              class="group transition-all mb-4 block"
            >
              <img
                src={coverPath}
                alt={item.data.title}
                width="720"
                height="480"
                class="rounded-lg transition-all group-hover:shadow-lg group-hover:opacity-90"
                loading="lazy"
              />
              <div class="mt-4 text-center text-neutral-800 body-text-1">
                <strong class="font-normal">{item.data.title}</strong>
                <p class="text-xs">{item.data.description}</p>
              </div>
            </a>
          );
        })
      }
    </div>
  </div>
</Layout>