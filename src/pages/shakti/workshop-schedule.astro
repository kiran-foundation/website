---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <main class="min-h-screen w-full pt-[85px] relative">
    <div class="hero">
      <div class="imageContainer relative flex flex-col items-center justify-center h-[500px] overflow-hidden">
        {/* Background blurred image */}
        <div class="absolute inset-0">
          <img 
            src="/logo2.png" 
            class="h-full w-full object-cover blur-md opacity-50" 
            alt=""
            aria-hidden="true"
          />
        </div>
        
        {/* Main content */}
        <div class="relative z-10 flex flex-col items-center gap-8">
          {/* Logo */}
          <img 
            src="/logo4.png" 
            class="w-[200px] h-[200px] rounded-full logo-shadow" 
            alt="Company Logo"
          />
          
          {/* Text box */}
          <div class="heroText w-[40%] bg-white/60 p-6 rounded-lg shadow-md">
            <p class="text-gray-700 leading-relaxed .body-text-1">
              Lorem ipsum dolor sit amet, consectetur adipisicing elit. Porro possimus saepe itaque eius vero adipisci quae voluptates nostrum odio dolor tenetur eum totam dolores esse sequi ab, cumque enim voluptas!
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class='sk-eventbrite-event' data-embed-id='25562238'></div><script src='https://widgets.sociablekit.com/eventbrite-events/widget.js' defer></script>
    <section class="flex flex-col items-center justify-center w-full px-4 py-12">
      <div class="w-full max-w-2xl bg-white/90 rounded-2xl shadow-lg p-8 flex flex-col items-center">
        <h2 class="text-2xl font-semibold mb-4 text-center text-[#f1592a] tracking-tight">
          Upcoming Events
        </h2>
        <div class="w-full">
          <div class='sk-eventbrite-event' data-embed-id='25562238'></div>
        </div>
      </div>
      <script src='https://widgets.sociablekit.com/eventbrite-events/widget.js' defer></script>
    </section>
  </main>
</Layout>

