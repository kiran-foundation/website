---
import "aos/dist/aos.css";
import "jarallax/dist/jarallax.min.css";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/pratibha/Hero.astro";
import Intro from "../components/pratibha/Intro.astro";
import BenefitOne from "../components/pratibha/BenefitOne.astro";
import SelectionProcess from "../components/pratibha/SelectionProcess.astro";

import Breadcrumb from "../components/pratibha/Breadcrumb.astro";
import BreakingBarriers from "../components/pratibha/BreakingBarriers.astro";
import Faq from "../components/common/FaqPratibha.astro";
import FutuerBuilder from "../components/pratibha/FutuerBuilder.astro";
import Mentoring from "../components/pratibha/Mentoring.astro";

---

<script src="/assets/js/theme.min.js" is:inline></script>

<script>
  import AOS from "aos";
  AOS.init();
</script>
<script src="jarallax/dist/jarallax.min.js"></script>
<script src="simplebar/dist/simplebar.min.js"></script>

<Layout title="Pratibha">
  <!-- Page wrapper -->

  <main class="page-wrper">
    <div class="h-[4rem]"></div>
    <div class="wid"><Breadcrumb pageName="Pratibha Scholarship" /></div>
    <Hero collection="pratibha" slug="hero" />
    <Intro mt="mt-[5.375rem] md:mt-[11.5rem]"  />

    <BenefitOne mt="mt-[5.375rem] md:mt-[7.5rem]" />
    <Mentoring mt="mt-[5.375rem] md:mt-[11.5rem]"  />

    <BreakingBarriers mt="mt-[5.375rem] md:mt-[7.5rem]" />

    <SelectionProcess mt="mt-[5.375rem] md:mt-[7.5rem]" />

    <FutuerBuilder mt="mt-[5.375rem] md:mt-[11.5rem]"  />
    <Faq
      collection="pratibha"
      slug="faq"
      mt="mt-[5.375rem] md:mt-[11.5rem] mb-[7.5rem]"
    />

    <a
      class="btn-scroll-top"
      href="#top"
      data-scroll
      aria-label="Scroll back to top"
    >
      <svg
        viewBox="0 0 40 40"
        fill="currentColor"
        xmlns="http://www.w3.org/2000/svg"
      >
        <circle
          cx="20"
          cy="20"
          r="19"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-miterlimit="10"></circle>
      </svg>
      <i class="ai-arrow-up"></i>
    </a>
  </main>

  <style>
    main {
      /* width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center; */
    }
  
    .wid {
      justify-self: center;
      width: 67%;
    }
    @media (max-width: 1024px) {
      .wid {
        width: 70%;
        justify-self: center;
      }
    }
    @media (max-width: 992px) {
      .wid {
        justify-self: center;
        width: 90%;
      }
      .padding {
        height: 5rem;
      }
    }
    @media (max-width: 768px) {
      .wid {
        justify-self: center;

        width: 90%;
      }
      .padding {
        height: 5rem;
      }
    }
  </style>
</Layout>
