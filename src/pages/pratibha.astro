---
import "aos/dist/aos.css";
import "jarallax/dist/jarallax.min.css";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/pratibha/Hero.astro";
import Intro from "../components/pratibha/Intro.astro";
import BenefitOne from "../components/pratibha/BenefitOne.astro";
import SelectionProcess from "../components/pratibha/SelectionProcess.astro";

import Breadcrumb from "../components/pratibha/Breadcrumb.astro";
import BreakingBarriers from "../components/pratibha/BreakingBarriers.astro";
import Faq from "../components/pratibha/FaqPratibha.astro";
import FutuerBuilder from "../components/pratibha/FutuerBuilder.astro";
import Mentoring from "../components/pratibha/Mentoring.astro";
---

<script src="/assets/js/theme.min.js" is:inline></script>

<script>
  import AOS from "aos";
  AOS.init();
</script>
<script src="jarallax/dist/jarallax.min.js"></script>
<script src="simplebar/dist/simplebar.min.js"></script>

<Layout title="Pratibha">
  <!-- Page wrapper -->
</script>
<main class="page-wrapper   flex flex-col justify-center items-center ">
  <div class="h-[4rem]"></div>
    <div class="wid"><Breadcrumb /></div>
    <Hero image="/assets/images/hero/smiley-man-holding-book-front.png" />
    <!-- <Heading title='What we Do' /> -->
    <div class="padding"></div>
    <div class="wid">
      <Intro />
      <div class="padding"></div>
      <Mentoring/>
      <div class="padding"></div>
      <BenefitOne />
      <div class="padding"></div>
      
      <BreakingBarriers/>
      
    </div>
    <SelectionProcess />
    <div class="padding"></div>
    <div class="wid"><FutuerBuilder/></div>
    <div class="padding"></div>
    <div class="wid">
      <Faq />
    </div>



  </main>

  <!-- Back to top button -->

  <a
    class="btn-scroll-top"
    href="#top"
    data-scroll
    aria-label="Scroll back to top"
  >
    <svg
      viewBox="0 0 40 40"
      fill="currentColor"
      xmlns="http://www.w3.org/2000/svg"
    >
      <circle
        cx="20"
        cy="20"
        r="19"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-miterlimit="10"></circle>
    </svg>
    <i class="ai-arrow-up"></i>
  </a>
</Layout>

<style>
  main {
    /* width: 100%; */
  }
  .padding {

    height: 5rem;
  }
  .wid {
    justify-self: center;
    width: 67%;
  }
  @media (max-width: 1024px) {
    .wid {
      width: 70%;
      justify-self: center;
    }
  }
  @media (max-width: 992px) {
    .wid {
      justify-self: center;
      width: 90%;
    }
  }
  @media (max-width: 768px) {
    .wid {
      justify-self: center;

      width: 95%;
    }
  }
</style>
