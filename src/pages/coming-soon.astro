---
import "aos/dist/aos.css";
import "jarallax/dist/jarallax.min.css";
import Layout from '../layouts/Layout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
---

<script src="/assets/js/theme.min.js" is:inline></script>
<script>
  import AOS from "aos";
  AOS.init();
</script>
<script src="jarallax/dist/jarallax.min.js"></script>
<script src="simplebar/dist/simplebar.min.js"></script>
<link rel="stylesheet" href="/assets/css/theme.min.css" />
<link rel="stylesheet" href="/assets/icons/around-icons.min.css" />

<Layout title="Coming Soon - Annual Report">
  <main class="page-wrapper">
    <Header />

    <section class="coming-soon-section">
      <div class="overlay"></div>
      <div class="content" data-aos="fade-up">
        <h2 class="page_title">Coming Soon</h2>
        <p class="coming-soon-text">
          Our report is currently in progress and will be available soon.
          Stay tuned for updates!
        </p>
        <div class="countdown">
          <div class="countdown-item">
            <span class="countdown-number" id="days">00</span>
            <span class="countdown-label">Days</span>
          </div>
          <div class="countdown-item">
            <span class="countdown-number" id="hours">00</span>
            <span class="countdown-label">Hours</span>
          </div>
          <div class="countdown-item">
            <span class="countdown-number" id="minutes">00</span>
            <span class="countdown-label">Minutes</span>
          </div>
          <div class="countdown-item">
            <span class="countdown-number" id="seconds">00</span>
            <span class="countdown-label">Seconds</span>
          </div>
        </div>
        <a href="#" class="notify-btn" role="button">Notify Me</a>
      </div>
    </section>

    <Footer />
  </main>
</Layout>

<style>
  /* Global Styles */
  body, html {
    margin: 0;
    padding: 0;
    font-family: 'Poppins', sans-serif;
    background: #f5f5f5;
    overflow-x: hidden;
  }

  .page-wrapper {
    overflow-x: hidden;
  }

  .coming-soon-section {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    height: 100vh;
    width: 100vw;
    background: linear-gradient(to right, rgba(0, 123, 255, 0.8), rgba(255, 193, 7, 0.8)), url('/assets/images/coming-soon-bg.jpg') center/cover no-repeat;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
  }

  .content {
    position: relative;
    text-align: center;
    z-index: 1;
    color: #fff;
    padding: 2rem;
    max-width: 800px;
    width: 100%;
    animation: fadeIn 1.5s ease-in-out;
  }

  .page_title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    color:skyblue;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  }

  .coming-soon-text {
    font-size: 1.5rem;
    font-weight: 400;
    margin-bottom: 2rem;
    line-height: 1.6;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  .countdown {
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
    gap: 1rem;
  }

  .countdown-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    padding: 1rem;
    width: 80px;
  }

  .countdown-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: #ffd700;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .countdown-label {
    font-size: 1rem;
    font-weight: 500;
    color: #ddd;
    text-transform: uppercase;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  .notify-btn {
    display: inline-block;
    background-color: #ff5722;
    color: #fff;
    padding: 0.75rem 1.5rem;
    font-size: 1.2rem;
    font-weight: 600;
    text-transform: uppercase;
    border-radius: 50px;
    transition: background-color 0.3s ease-in-out;
    text-decoration: none;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .notify-btn:hover {
    background-color: #e64a19;
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
      transform: translateY(-20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .page_title {
      font-size: 2.5rem;
    }

    .coming-soon-text {
      font-size: 1.2rem;
    }

    .countdown-item {
      width: 70px;
      padding: 0.8rem;
    }

    .countdown-number {
      font-size: 2rem;
    }

    .countdown-label {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 576px) {
    .page_title {
      font-size: 2rem;
    }

    .coming-soon-text {
      font-size: 1rem;
    }

    .countdown-item {
      width: 60px;
      padding: 0.6rem;
    }

    .countdown-number {
      font-size: 1.5rem;
    }

    .countdown-label {
      font-size: 0.8rem;
    }
  }
</style>
