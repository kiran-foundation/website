---
import { getEntry } from "astro:content";
const { title, image, author,quote } = (await getEntry("about", "our-mission-vision")).data;
---

<section class=" max-w-[1920px] mx-auto bg-[#F1F1F1] px-4">

    <div class=" max-w-[1296px] py-[120px] mx-auto">
        <h1 class=" text-center heading-3 md:heading-1">{title}</h1>
        <div class=" w-max-[1296px] mt-[3.75rem] mx-auto flex flex-col-reverse lg:flex-row  items-center gap-[60px]  ">
            <img src={image} class=" rounded-3xl" width="390" height="502" alt="">
            <div class=" ">
                <p class=" max-w-[841px]  font-poppins font-light text-[20px] md:text-[36px] leading-[38px] md:leading-[68px] tracking-[1px]"> <span class=" lg:font-light lg:text-[96px] lg:leading-[68px] lg:tracking-[1px]">‘’</span>{quote}<span class="lg:font-light lg:text-[64px] lg:leading-[68px] lg:tracking-[1px]">’’</span></p>
                <h4 class="  font-poppins font-semibold md:font-bold text-[1.125rem] md:text-[20px] leading-[38px] tracking-[1px] text-right">{author}</h4>
            </div>
        </div>
    </div>

</section>