---
import { getEntry } from 'astro:content'
const aboutMission = (await getEntry('about', 'mission')).data
---

<!---Our Mission section -->
<section class='container' >
  <div class='container'>
    <div class='h1' style="text-align: center;" >{aboutMission.title}</div>
    <div class='d-flex justify-content-around align-items-center flex-wrap'>
      <div class='mission-card'>
        <div class='mission-icon'>
          <img src={aboutMission.cardOne.imgIcon} alt="Vision Icon">
        </div>
        <div class='mission-card-title'>{aboutMission.cardOne.heading}</div>
        <div class='mission-card-desc'>
          {aboutMission.cardOne.description}
        </div>
      </div>
      <div class='mission-card'>
        <div class='mission-icon'>
          <img src={aboutMission.cardSecond.imgIcon} alt="Mission Icon">
        </div>
        <div class='mission-card-title'>{aboutMission.cardSecond.heading}</div>
        <div class='mission-card-desc'>
          {aboutMission.cardSecond.description}
        </div>
      </div>
      <div class='mission-card'>
        <div class='mission-icon'>
          <img src={aboutMission.cardThird.imgIcon} alt="Values Icon">
        </div>
        <div class='mission-card-title'>{aboutMission.cardThird.heading}</div>
        <div class='mission-card-desc'>
          {aboutMission.cardSecond.description}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .mission-title {
    font-weight: 600;
    color: #2b2e36;
  }

  .mission-card {
    width: 340px;
    height: 266px;
    padding: 25px 15px;
    background-color: #f7fcfe;
    border-radius: 30px;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .mission-card-title {
    font-family: 'Inter', sans-serif;
    font-size: 1.4rem;
    font-weight: 600;
    line-height: 33px;
    text-align: left;
    color: #2b2e36;
    padding: 10px;
  }

  .mission-icon {
    width: 75px;
    height: 75px;
    margin-right: 20px;
  }
</style>


