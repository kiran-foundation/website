---
import { getEntry } from "astro:content";
import Button from "../common/button.astro";
const volunteer = (await getEntry("home", "volunteer")).data;
---

<!-- Main Container -->
<div
  class="max-w-[1296px] mx-auto border-2 border-red-500 mt-8 md:mt-[11.5rem] mb-[7.5rem] flex items-center justify-center flex-col p-1"
>
  <!-- Heading Section -->
  <div
    class="relative flex items-center justify-center flex-col text-center space-y-4 mb-[7.5rem] border-2 border-black max-w-[1074px]"
  >
    <h2
      class="text-4xl lg:text-5xl font-normal font-merriweather text-[#1E1E1E] tracking-[-2.25%] leading-[150%] w-full py-2 border-2 border-purple-500 mb-8"
    >
      {volunteer.join}
    </h2>
    <p
      class="text-lg xl:text-[2rem] xl:leading-[60px] font-poppins text-[#49494C] font-normal border-2 border-purple-500"
    >
      {volunteer.join_description}
    </p>
  </div>

  <!-- Volunteer Positions Section -->
  <section class="w-full border-2 border-blue-500 mb-[7.5rem]">
    <div class="text-center space-y-4 mb-24">
      <h2
        class="text-xl md:text-2xl xl:text-[2rem] font-semibold font-poppins border-2 border-green-500"
      >
        {volunteer.heading}
      </h2>
    </div>

    <div class="mt-6 max-w-7xl mx-auto border-2 border-yellow-500">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          [1, 2, 3].map((index) => (
            <div class="border border-[#9c9c9c] rounded-xl p-9 flex flex-col justify-between items-center group w-[416px] h-[268px]">
              <h3 class="font-poppins text-2xl font-semibold mb-3 text-gray-800">
                {volunteer[`volunteerRole${index}`].title}
              </h3>
              <p class="font-poppins text-[20px] text-gray-600 mb-1">
                {volunteer[`volunteerRole${index}`].description}
              </p>
              <p class="font-poppins text-[20px] text-gray-600 mb-12">
                Minimum Commitment
              </p>
              <Button
                link={volunteer[`volunteerRole${index}`].link}
                title="Learn More"
                btn="btn3"
              />
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Why Volunteer Section -->
  <section class="w-full border-2 border-green-700 overflow-hidden">
    <div
      class="flex flex-col md:flex-row items-center justify-center gap-16 border-2 border-orange-500"
    >
      <div class="border-3 border-pink-500 max-w-[680px] max-h-[472px]">
        <h2
          class="text-2xl md:text-3xl lg:text-4xl mb-8 font-bold font-poppins text-[#1E1E1E]"
        >
          {volunteer.title}
        </h2>
        <p
          class="text-md sm:text-lg mb-8 font-poppins font-normal !leading-[36px] text-[#49494C]"
        >
          {volunteer.join_why1}
        </p>
        <p
          class="text-md sm:text-lg mb-12 font-poppins font-normal !leading-[36px] text-[#49494C]"
        >
          {volunteer.join_why2}
        </p>
        <div class="flex gap-4 md:gap-4 xl:gap-6 flex-wrap">
          <Button link="/volunteering" title="Become a Volunteer" btn="btn1" />
          <Button link="/volunteering" title="See All Positions" btn="btn3" />
        </div>
      </div>
      <div
        class="border-3 border-pink-500 max-w-[555px] max-h-[552px]"
        data-aos="fade-left"
        data-aos-duration="600"
        data-aos-offset="280"
        data-disable-parallax-down="sm"
      >
        <img
          class="rounded-lg w-[552px] h-[549px]"
          src="/assets/images/Homepage/why.png"
          alt="Volunteer illustration"
          loading="lazy"
        />
      </div>
    </div>
  </section>
</div>
