---
import { getEntryBySlug } from 'astro:content';
import Button from '../common/button.astro';
import TalentSectionImage from './TalentSectionImage.astro';

const talent = await getEntryBySlug('home', 'talent');
const { title, buttonText, image1, image2, alt1, alt2 } = talent?.data ?? {};
const { Content } = await talent.render();
---

<!-- Main Container -->
 <section>
<div
  class="max-w-[1296px] mx-auto mt-[86px] lg:mt-[7.5rem] mb-6 lg:mb-[0rem] flex items-center justify-center flex-col p-1 !overflow-hidden"
>
<TalentSectionImage/>
  <!-- Heading Section -->
  <div
    class="relative flex items-center justify-center flex-col text-left space-y-4 mb-[64px] xl:mb-[7.5rem] mx-6 xl:mx-0 max-w-[1074px]"
  >
    <h2 class="heading-3 w-full py-1 mb-3 font-merriweather">
      {title}
    </h2>
    <div class="body-text-1">
      <div class="margin-bottom padding-right"><Content/></div>
      <Button
            link="/support-us"
            title="Support Us"
            btn="btn1"
            widthClass="w-full md:w-[235px] lg:w-full xl:w-[235px]"
            heightClass="h-[60px]"
          />
    </div>
  </div>
</div>
<style>
  .margin-bottom{
    margin-bottom: 2rem;
  }
  .padding-right{
    padding-right: 14rem;
  }
</style>

