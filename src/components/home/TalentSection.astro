---
import { getEntry} from 'astro:content';
import Button from '../common/button.astro';
import TalentSectionImage from './TalentSectionImage.astro';
import "../../styles/global.css";
const talent = await getEntry('home', 'talent');
const { title, buttonText, image1, image2, alt1, alt2 } = talent?.data ?? {};
const { Content } = await talent.render();
---

<!-- Main Container -->
 <section>
<div
  class="max-w-[1296px] mx-auto mt-[86px] lg:mt-[7.5rem] mb-6 lg:mb-[7.5rem] flex items-center justify-center flex-col p-1 !overflow-hidden"
>
<TalentSectionImage/>
  <!-- Heading Section -->
  <div
    class="relative flex items-center justify-center flex-col text-left space-y-4 mb-[1rem] xl:mb-[1rem] mx-6 xl:mx-0 max-w-[1200px] customWrapper"
  >
    <h2 class="heading-3 w-full py-1 mb-3 font-merriweather line-height">
      {title}
    </h2>
    <div class="body-text-1">
      <div class="margin-bottom"><Content/></div>
      <Button
            link="/support-us"
            title="Support Us"
            btn="btn1"
            widthClass="w-full md:w-[235px] lg:w-full xl:w-[235px]"
            heightClass="h-[60px]"
          />
    </div>
  </div>
</div>

