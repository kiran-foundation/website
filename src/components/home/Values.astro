---
import { getEntry } from "astro:content";
const values = (await getEntry("home", "values")).data;
import Button from "../common/button.astro";
---

<h3 class="text-4xl lg:text-5xl text-center mt-10 mb-10 font-merriweather">
  {values.vision.title}
</h3>
<section class="overflow-hidden mt-10 xl:mt-20">
  <div class="xl:container mx-auto pb-6 mb-0 md:mb-8">
    <div class="flex flex-col md:flex-row gap-4 items-center p-6" >
      <!-- Image Section -->
      <div data-aos="fade-right" data-aos-duration="600" data-aos-offset="15 0" class="w-full md:w-1/2 flex items-center justify-center flex-col"> 
        <div class="h-auto w-auto md:min-w-[23.5rem] md:h-[23.5rem] lg:min-w-[25rem] lg:h-[25rem] xl:!w-[35rem] xl:!h-[32rem] ">
          <img
            class="w-full h-full rounded-3xl filter"
            src="/assets/images/Homepage/maa-kiran.png"
            alt="Image"
          />
        </div>
        <div class="flex items-center justify-center mt-4">
          <p class="flex items-center gap-2 sm:block font-bold text-xl text-gray-800">
            {values.maa.name}
            <span class="text-gray-500 font-thin text-sm sm:text-base md:text-sm">{values.maa.lifespan}</span>
          </p>
        </div>
      </div>

      <!-- Text Content Section -->
        <div data-aos="fade-left" data-aos-duration="600" data-aos-offset="280" class="flex flex-col h-full xl:w-4/6 px-2 xl:px-5 py-2 justify-between -translate-y-24 ">
          <h2 class="text-3xl font-bold text-gray-800">{values.maa.title}</h2>
          <p class="text-2xl md:text-xl lg:text-3xl 2xl:text-[2.4rem] leading-relaxed 2xl:leading-[3rem] font-poppins text-gray-700 mb-[1.7rem] xl:mb-16  italic">
            "{values.maa.quote}"
          </p>
          <p class="text-gray-600 mb-[1.7rem] xl:mb-12 text-base lg:text-xl">
            {values.maa.step}
          </p>
          <div>
            <Button link="/about" title="Read more" btn="btn2"/>
          </div>
        </div>
    </div>
  </div>
</section>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap");
  .font-poppins {
    font-family: "Poppins", sans-serif;
  }
</style>