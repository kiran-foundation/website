---
import { getEntry } from "astro:content";
const programs = (await getEntry("home", "programs")).data;
const common = (await getEntry("common", "common")).data;
import Button from "../common/button.astro";
---

<!-- Heading Section -->
<div
  class="flex items-center justify-center flex-col text-center px-4 py-8 md:py-12 space-y-4 mt-8 md:mt-20 "
>
  <h2
    class="text-3xl md:text-[2.5rem] xl:text-[3rem] font-bold mb-8 font-merriweather px-4 leading-10 text-[#1E1E1E]"
  >
    {programs.heading.head1}
  </h2>
  <p
    class="max-w-[51rem] xl:max-w-[1034px] mx-auto text-lg md:text-[1.1rem] xl:text-[32px] font-poppins px-2  text-[#49494C] leading-[60px]"
  >
    {programs.heading.head2}
    {programs.heading.head3}
  </p>
</div>

<!-- Programs Container -->
<div class="xl:container mx-auto my-12">
  <!-- Pratibha Program -->
  <section class="px-4 md:px-8 py-8 lg:py-12  xl:-translate-x-10 overflow-hidden">
    <div class="flex flex-col md:flex-row items-center gap-4  justify-center">
      <!-- Image Column -->
      <div
        class="w-full md:w-[45%] lg:w-1/2 flex justify-center"
        data-aos="fade-right"
        data-aos-duration="500"
        data-aos-offset="100"
        data-disable-parallax-down="sm"
      >
        <img
          class="rounded-lg w-full max-w-[500px] md:max-w-[500px] lg:max-w-[600px] h-auto object-cover"
          src="/assets/images/Homepage/home2.png"
          alt="Pratibha program illustration"
          loading="lazy"
        />
      </div>

      <!-- Text Content -->
      <div
        class="w-full md:w-[55%] lg:w-[45%] space-y-4 font-poppins px-2  md:pl-6 lg:pl-8 xl:pl-12"
      >
        <h2
          class="text-[1.8rem] lg:text-3xl mb-[1.3rem] lg:mb-10 font-semibold font-poppins text-[#1E1E1E]"
        >
          {programs.pratibha.title}
        </h2>
        <p
          class="text-[1rem] lg:text-lg mb-[1rem] lg:mb-6 font-poppins leading-relaxed text-[#49494C]"
        >
          {programs.pratibha.description1}
        </p>
        <p
          class="text-[1rem] lg:text-lg mb-[1rem] lg:mb-6 font-poppins leading-relaxed text-[#49494C]"
        >
          {programs.pratibha.description2}
        </p>
        <p
          class="text-[1rem] lg:text-lg mb-[1rem] lg:mb-6 font-poppins leading-relaxed text-[#49494C]"
        >
          {programs.pratibha.description3}
        </p>
        <div class="mt-4">
          <Button link="/shakti" title={common.more} btn="btn2" />
        </div>
      </div>
    </div>
  </section>

  <!-- Shakti Program -->
  <section class="px-4 md:px-8 py-8 lg:py-12  xl:translate-x-10 overflow-hidden">
    <div class="flex flex-col md:flex-row gap-4 items-center justify-center">
      <!-- ----- only for mobile ---- -->
      <div
        class="w-full md:w-[45%] lg:w-1/2 flex md:hidden justify-center md:order-2 "
        data-aos="fade-left"
        data-aos-duration="600"
        data-aos-offset="200"
        data-disable-parallax-down="md"
      >
        <img
          class="rounded-lg w-full max-w-[500px] md:max-w-[500px] lg:max-w-[600px] h-auto object-cover"
          src="/assets/images/Homepage/home3.png"
          alt="Shakti program illustration"
          loading="lazy"
        />
      </div>
      <!-- Text Content -->
      <div
        class="w-full md:w-[55%] lg:w-[45%] space-y-4 font-poppins px-2 md:pr-6 lg:pr-8 xl:pr-12 md:order-1"
      >
        <h2
          class="text-[1.8rem] lg:text-3xl mb-[1.3rem] lg:mb-10 font-semibold font-poppins text-[#1E1E1E]"
        >
          {programs.shakti.title}
        </h2>
        <p
          class="text-[1rem] lg:text-lg mb-[1rem] lg:mb-6 leading-relaxed font-poppins text-[#49494C]"
        >
          {programs.shakti.description1}
        </p>
        <p
          class="text-[1rem] lg:text-lg mb-[1rem] lg:mb-6 leading-relaxed font-poppins text-[#49494C]"
        >
          {programs.shakti.description2}
        </p>
        <div class="mt-4">
          <Button link="/shakti" title={common.more} btn="btn2" />
        </div>
      </div>

      <!-- Image Column -->
      <div
        class="w-full md:w-[45%] lg:w-1/2 md:flex hidden  justify-center md:order-2 overflow-hidden"
        data-aos="fade-left"
        data-aos-duration="500"
        data-aos-offset="200"
        data-disable-parallax-down="md"
      >
        <img
          class="rounded-lg w-full max-w-[500px] md:max-w-[500px] lg:max-w-[600px] h-auto object-cover"
          src="/assets/images/Homepage/home3.png"
          alt="Shakti program illustration"
          loading="lazy"
        />
      </div>
    </div>
  </section>
</div>
