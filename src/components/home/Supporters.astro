---
import { getEntry } from "astro:content";
import Button from "../common/button.astro";
const volunteer = (await getEntry("home", "supporters")).data;
---

<!-- Main Container -->
<div class="max-w-[1296px]  mt-[86px] lg:mt-[11.5rem] flex items-center justify-center flex-col p-1 !overflow-hidden mx-[24px] md:mx-auto ">
  <!-- Heading Section -->
  <div class="w-full  text-center max-w-[852px] mb-[64px] lg:mb-[7.5rem] ">
    <h1 class="text-3xl md:text-[2.5rem] xl:text-[3rem] font-normal mb-8 font-merriweather leading-[150%] text-[#1E1E1E] ">
      {volunteer.title}
    </h1>
    <p class="mx-auto text-xl md:text-2xl xl:text-[2rem] text-center max-w-[374px] sm:max-w-[700px] lg:max-w-full font-poppins text-[#49494C]  mb-12 !tracking-normal leading-[38px] lg:!leading-[60px]">
      {volunteer.description}
    </p>
    <Button link="/support-us" title="Support Us" btn="btn3" widthClass="w-full md:w-[198px]"/>
  </div>

  <!-- Supporters Grid -->
  <div class="grid grid-cols-2 lg:grid-cols-5 gap-6 sm:gap-4 lg:gap-2 items-center justify-center w-full ">
    {volunteer.supporters.map((supporter:any, index:any) => (
      <div class={`w-full aspect-[7/2.25] flex items-center justify-center p-2 rounded-lg  ${index === 4 ? 'hidden lg:flex' : ''}`}>
        <img
          src={supporter.image}
          alt={supporter.name}
          class="w-full h-full object-scale-down max-w-[160px] sm:max-w-[150px] lg:max-w-[140px]"
          loading="lazy"
        />
      </div>
    ))}
  </div>
</div>