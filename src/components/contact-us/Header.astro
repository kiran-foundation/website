---
import { getEntry } from "astro:content";

const data = await getEntry("contact", "contact");
const { title, subTitle } = data.data;
---

<div
  class="!bg-none text-center lg:max-w-[81rem] mx-auto px-6 mt-[2rem] md:mt-[5rem] md:mb-[2.625rem]"
>
  <div class="pb-9 relative w-full px-6 mx-auto">
    <h1
      class="w-full text-[1.875rem] md:text-[4rem] font-merriweather font-bold leading-[150%] tracking-[-2.2%]"
    >
      <span class="relative inline-block">
        <span class="relative z-10">{title}</span>
        <span class="rec mx-auto">
          <img
            src="/assets/svg/green-line-under-text-volunteer.svg"
            alt="Green Underline"
            class="xs:w-full w-[80%] mx-auto h-auto"
          />
        </span>
      </span>
    </h1>
  </div>

  <p
    class="mx-auto max-w-[81rem] block lg:max-h-[6.5rem] font-merriweather text-[1.25rem] md:text-[2rem] font-normal leading-[2.375rem] md:leading-[3.25rem] justify-center md:text-center text-justify text-[#49494C]"
  >
    {subTitle}
  </p>
</div>

<style>
  .rec {
    position: absolute;
    bottom: 48px;
    left: 0;
    width: 100%;
    z-index: 0;
  }

  @media (min-width: 380px) {
    .rec {
      bottom: -2px;
      width: 100%;
      /* left: -10%;          */
    }
  }

  @media (max-width: 386px and min-width: 378px) {
    .rec {
      bottom: 0px;
      width: 100%;
    }
  }

  @media (max-width: 321px) {
    .rec {
      bottom: 48px;
      width: 120%;
      right: -10%;
      left: -10%;
    }
  }

  @media (max-width: 318px) {
    .rec {
      bottom: 48px;
      width: 85%;
      right: -10%;
      left: -10%;
    }
  }
</style>
