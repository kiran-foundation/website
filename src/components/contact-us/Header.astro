<div class=" text-center lg:max-w-[1296px] mx-auto px-6  max-h-[15.9375rem] mt-[6.375rem] md:mb-[123px] mb-0  ">
  <div class="pb-9  relative w-full tb:w-full  px-6 mx-auto ">
    <h1 class=" text-[36px]   md:text-[64px]  font-merriweather font-bold leading-[150%]  tracking-[-2.2%]">
      <span class="relative inline-block">  
        <span class="relative z-10">{title}</span>
        <span class="absolute bottom-[55px] xs:bottom-[-5px] left-0 w-full z-0">
        <img src="/assets/svg/green-line-under-text-volunteer.svg" alt="Green Underline" class="xs:w-full w-[90%] mx-auto h-auto" />

        </span>
        
        
      </h1>
      
    </div>
    <!-- font-family: Poppins;
