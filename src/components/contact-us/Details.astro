---
import { getEntry } from "astro:content";
const contacts = await getEntry("contact", "contact");
const { address, contactNo, contactEmails } = contacts.data;
---

<div
  class="!bg-none flex flex-col items-center px-4 sm:px-8 md:px-16 lg:px-32 xl:px-52 2xl:px-64 gap-8 w-full md:mb-[120px] mb-0"
>
  <!-- Frame 1000006142 -->
  <div
    class="flex flex-col font-poppins flex-wrap md:flex-row items-center justify-center p-0 gap-6 w-full max-w-[1122px] sm:my-[96px] mt-[96px] mb-[120px]"
  >
    <!-- Address Card -->
    <div
      class="w-full md:w-[358px] h-auto min-h-[315px] bg-[#F1F1F1] rounded-2xl pl-[1.5rem] sm:pl-[46px] pt-[2.625rem] flex-none"
    >
      <div class="flex flex-col items-start gap-8 max-w-[282px]">
        <div
          class="w-full font-poppins text-[16px] font-semibold md:text-lg leading-[32px] md:leading-[100%] text-[#1E1E1E]"
        >
          Address
        </div>
        <!-- Address Text -->
        <div
          class="w-full h-auto font-poppins text-[16px] font-normal md:text-lg leading-[2rem] md:leading-[1.6875rem] text-[#49494C]"
        >
          {address}
        </div>
      </div>
    </div>

    <!-- Phone Card -->
    <div
      class="w-full md:w-[358px] h-auto min-h-[315px] bg-[#F1F1F1] rounded-2xl pl-[24px] sm:pl-[46px] pt-[42px] flex-none"
    >
      <div class="flex flex-col items-start gap-8 w-[144px]">
        <!-- Heading 4 â†’ Phone -->

        <div
          class="w-full font-poppins text-[16px] font-semibold md:text-lg leading-[32px] md:leading-[100%] text-[#1E1E1E]"
        >
          Phone
        </div>
        <div class="flex flex-col items-start gap-6 w-full">
          {
            contactNo.map((contact) => {
              // console.log(contact);
              return (
                <div class="flex flex-col items-start w-full">
                  <div class="w-full font-normal text-sm leading-[21px] text-[#49494C]">
                    {contact.option}
                  </div>
                  <a
                    href={"tel:" + contact.answer.replace(/ /g, "")}
                    class="w-full font-poppins text-[16px] font-normal md:text-lg leading-[32px] md:leading-[100%] text-[#1E1E1E]"
                  >
                    {contact.answer}
                  </a>
                </div>
              );
            })
          }
        </div>
      </div>
    </div>

    <!-- Email Card -->
    <div
      class="w-full md:w-[358px] h-auto min-h-[315px] bg-[#F1F1F1] rounded-2xl pl-[24px] sm:pl-[46px] pt-[42px] flex-none"
    >
      <div class="flex flex-col items-start gap-8 w-[12.4375rem]">
        <div
          class="w-full font-poppins text-[16px] font-semibold md:text-lg leading-[32px] md:leading-[100%] text-[#1E1E1E]"
        >
          Email
        </div>
        <div class="flex flex-col items-start gap-6 w-full">
          {
            contactEmails.map((contact) => {
  
              return (
                <div class="flex flex-col items-start w-full">
                  <div class="w-full font-poppins font-normal text-sm leading-[21px] text-[#49494C]">
                    {contact.option}
                  </div>
                  <a
                    href={"mailto:" + contact.answer}
                    class="w-full font-poppins text-[16px] font-normal md:text-lg leading-[32px] md:leading-[100%] text-[#1E1E1E]"
                  >
                    {contact.answer}
                  </a>
                </div>
              );
            })
          }
        </div>
      </div>
    </div>
  </div>
</div>
