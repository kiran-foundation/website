---
import Layout from "../../layouts/Layout.astro";
import Header from "../common/Header.astro";
import Footer from "../common/Footer.astro";
---

<script src="/assets/js/theme.min.js" is:inline></script>
<script src="/assets/js/coming-soon.js" is:inline></script>
<link rel="stylesheet" href="/assets/css/theme.min.css" />
<link rel="stylesheet" href="/assets/css/coming-soon.css" />

<Layout title="Coming Soon - Kiran Foundation">
  <main class="page-wrapper">
    <Header />

    <section class="coming-soon-section">
      <div class="overlay"></div>
      <div class="content" data-aos="fade-up">
        <h2 class="page_title">Coming Soon</h2>
        <p class="coming-soon-text">
          Our report is currently in progress and will be available soon. Stay
          tuned for updates!
        </p>
        <div class="countdown">
          <div class="countdown-item">
            <span class="countdown-number" id="days">00</span>
            <span class="countdown-label">Days</span>
          </div>
          <div class="countdown-item">
            <span class="countdown-number" id="hours">00</span>
            <span class="countdown-label">Hours</span>
          </div>
          <div class="countdown-item">
            <span class="countdown-number" id="minutes">00</span>
            <span class="countdown-label">Minutes</span>
          </div>
          <div class="countdown-item">
            <span class="countdown-number" id="seconds">00</span>
            <span class="countdown-label">Seconds</span>
          </div>
        </div>
        <button
          class="notify-button"
          id="notifyMeBtn"
          onclick="openNotifyPopup()">Notify Me</button
        >
        <div class="thank-you-message" id="thankYouMessage">
          Thanks! We will notify you when it's available.
        </div>
      </div>
    </section>
    <div id="notifyPopup" class="notify-popup">
      <div class="notify-popup-content">
        <span class="close-popup" onclick="closeNotifyPopup()">&times;</span>
        <h3>Notify Me</h3>
        <form id="notifyForm" onsubmit="submitNotifyForm(event)">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required />

          <label for="sourcePage">Source Page:</label>
          <input type="text" id="sourcePage" name="sourcePage" readonly />

          <button type="submit">Submit</button>
        </form>
      </div>
    </div>

    <Footer />
  </main>
</Layout>
