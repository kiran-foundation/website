---
import { getEntry } from "astro:content"
const pratibhaApplication = (await getEntry("pratibha","application")).data
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kiran Pratibha 2024</title>
    <link rel="stylesheet" href="/assets/css/Pratibha/pratibhaApply.css">
</head>
<body>
    <div class="apply-container">
        <div class="apply-title">{pratibhaApplication.title}</div>
        <div class="apply-subtitle">{pratibhaApplication.subtitle}</div>
        <div class="apply-highlight-container">
            <div class="apply-highlight-text">{pratibhaApplication.text}</div>
            <button class="apply-apply-button">{pratibhaApplication.button}</button>
        </div>
        <div class="apply-content-container">
            <p>{pratibhaApplication.paragraph}</p>
            <h4 class="apply-h4">{pratibhaApplication.eligibilty}</h4>
            <p>{pratibhaApplication.eligibiltyListOne}<br>
                {pratibhaApplication.eligibiltyListTwo}<br>
                {pratibhaApplication.eligibiltyListThird}<br>
                {pratibhaApplication.eligibiltyListFourth}</p>
        </div>
        <div class="apply-content-container">
            <h4 class="apply-h4">{pratibhaApplication.dates}</h4>
            <p>{pratibhaApplication.datesListOne}<br>
                {pratibhaApplication.datesListTwo}<br>
                {pratibhaApplication.datesListThird}</p>
        </div>
        <div class="apply-documents-container">
            <h4 class="apply-h4">{pratibhaApplication.documents}</h4>
            <p>{pratibhaApplication.documentsListOne}<br>
                {pratibhaApplication.documentsListTwo}<br>
                {pratibhaApplication.documentsListThird}<br>
                {pratibhaApplication.documentsListFourth}</p>
        </div>
        <div class="apply-content-container">
            <h4 class="apply-h4">{pratibhaApplication.information}</h4>
            <p>{pratibhaApplication.infoListOne}<br>
                {pratibhaApplication.infoListTwo}<br>
                {pratibhaApplication.infoListThird}</p>
        </div>
        <div class="apply-apply-container">
            <h4 class="apply-h4">{pratibhaApplication.selection}</h4>
            <p>{pratibhaApplication.selectionListOne}<br><br>


                {pratibhaApplication.selectionListTwo}<br><br>
                
                {pratibhaApplication.selectionListThird}</p>
        </div>
        <div class="apply-last-container">
            <button class="apply-download-button">{pratibhaApplication.downloadApp}</button>
            <span class="apply-google-form">{pratibhaApplication.googleform}</span>
        </div>
    </div>
</body>
</html>
