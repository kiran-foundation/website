---
import { getEntry } from "astro:content";
const lawforwomenData = (await getEntry("shakti", "shaktiprograme")).data;
const common = (await getEntry("common", "common")).data;
---

<section class="overflow-hidden" style="margin-top: 50px;">
  <div class="container pb-sm-3 mb-md-2 mb-lg-3">
    <div class="row g-4">
      <div
        class="col-md-6"
        data-aos="fade-right"
        data-aos-duration="600"
        data-aos-offset="280"
        data-disable-parallax-down="md"
      >
        <img
          class="object-fit-cover w-100 h-100 rounded-3"
          src={lawforwomenData.image}
          alt="Image"
        />
      </div>
      <div
        class="col-md-6"
        data-aos="fade-left"
        data-aos-duration="600"
        data-aos-offset="280"
        data-disable-parallax-down="md"
      >
        <div
          class="d-flex flex-column h-100 rounded-3 py-5 px-4 px-lg-5"
          style="background: #F7FCFE;"
        >
          <h2 class="programe-title-h2 mb-xl-4">
            {lawforwomenData.heading}
          </h2>
          <p
            class="shaktiprograme-paragraph-p mb-4 mb-xl-5"
            style="line-height: 2;"
          >
            {lawforwomenData.description}
          </p>
          <div class="mt-">
            <a
              class="shaktiprograme-knowmore-button btn btn-primary order-lg-3 d-none d-sm-inline-flex"
              href="/Pratibha">{common.knowMore}</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>