---
import { getEntry } from "astro:content";
const formData = (await getEntry("support-form", "form")).data;
const { paymentLoader } = formData;
---

<!-- Payment Processing Loader -->
<div id="payment-loader" style="display: none;" class="payment-loader-overlay">
  <div
    class="payment-loader-container absolute top-1/3 left-1/2
    -translate-x-1/2 -translate-y-1"
  >
    <div class="payment-loader-animation">
      <div class="payment-loader-dot"></div>
      <div class="payment-loader-dot"></div>
      <div class="payment-loader-dot"></div>
      <div class="payment-loader-dot"></div>
    </div>
    <div class="payment-loader-text">
      <h3>{paymentLoader.title}</h3>
      <p>{paymentLoader.description}</p>
    </div>
  </div>
</div>

<style>
  /* Payment Loader Styles - Simple & Clean */
  .payment-loader-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(8px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    padding: 1rem;
  }

  .payment-loader-container {
    background: white;
    border-radius: 8px;
    padding: 2rem;
    text-align: center;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    max-width: 320px;
    width: 90%;
  }

  .payment-loader-animation {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px;
    width: 60px;
    height: 60px;
    margin: 0 auto 1.5rem;
  }

  .payment-loader-dot {
    background: #d33c0d;
    border-radius: 4px;
    animation: pulse 1.5s ease-in-out infinite;
  }

  .payment-loader-dot:nth-child(1) {
    animation-delay: 0s;
  }
  .payment-loader-dot:nth-child(2) {
    animation-delay: 0.3s;
  }
  .payment-loader-dot:nth-child(3) {
    animation-delay: 0.6s;
  }
  .payment-loader-dot:nth-child(4) {
    animation-delay: 0.9s;
  }

  .payment-loader-text h3 {
    font-family: "Poppins", sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #1e1e1e;
    margin: 0 0 0.5rem 0;
  }

  .payment-loader-text p {
    font-family: "Poppins", sans-serif;
    font-size: 1rem;
    color: #49494c;
    margin: 0;
  }

  @keyframes pulse {
    0%,
    100% {
      background: #d33c0d;
      transform: scale(1);
    }
    50% {
      background: #72321e;
      transform: scale(1.1);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .payment-loader-container {
      padding: 1.5rem;
      max-width: 280px;
    }

    .payment-loader-animation {
      width: 50px;
      height: 50px;
    }

    .payment-loader-text h3 {
      font-size: 1.125rem;
    }

    .payment-loader-text p {
      font-size: 0.875rem;
    }
  }
</style>
