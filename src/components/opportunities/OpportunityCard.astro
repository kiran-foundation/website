---
const { datas = '' } = Astro.props;
import Button from "../common/button.astro";
---

<div
  class="bg-white rounded-2xl hover:shadow-md transition-shadow p-4 md:p-8 border border-gray-200 font-poppins h-auto min-h-[500px] md:!h-[512px] w-full md:w-[588px] flex flex-col justify-between"
>
  <!-- Title -->
  <h2 class="text-lg md:text-2xl leading-[140%] font-semibold text-webBlack">
    {datas.data.title}
  </h2>

  <!-- Details -->
  <div>
    <div class="mt-3 text-[14px] md:text-[18px] text-webBlack flex flex-col gap-3 md:gap-[18px] font-normal">
      <p><span class="font-normal">{datas.data.join}</span></p>
      <p class="lg:mt-4">
        <span class="font-normal">{datas.data.duration} â€¢ {datas.data.timeCommitment}</span>
      </p>
      <p class="lg:mt-4">{datas.data.team}</p>
      <p class="lg:mt-4">{datas.data.event}</p>
    </div>

    <!-- Divider -->
    <hr class="my-6 border-gray-300" />

    <!-- Buttons Section -->
    <div class="flex flex-col md:flex-row items-center px-0 md:px-1 gap-4 md:gap-[16px]">
      <Button
        link="/volunteering"
        title="Explore Opportunity"
        btn="btn3"
        widthClass="w-full md:w-[254px]"
      />
      <Button
        link={"/opportunities/" + datas.slug}
        title="Apply Now"
        btn="btn1"
        widthClass="w-full md:w-[254px] py-3"
      />
    </div>
  </div>
</div>
