---
import { getEntry } from "astro:content";
const componentheroData = (await getEntry("donation", "hero")).data;
import Breadcrumb from "../common/Breadcrumb.astro";
import Button from "../common/button.astro";
---

<Breadcrumb />
<!-- Add responsive layout classes -->

<!-- Wrapper: adjust height for mobile -->
<div class="h-auto lg:h-[1200px] relative">
  <div class="bg-[#F1F1F1] pt-16">
    <div class="container max-w-[1296px] mb-24 px-4 sm:px-6">
      <h1
        class="font-merriweather text-[32px] sm:text-[40px] md:text-[48px] lg:text-[64px] font-bold leading-snug sm:leading-[130%] lg:leading-[150%]"
      >
        Make a Lasting Impact: Support the Future with Your Donation
      </h1>
    </div>

    <div class="container max-w-[1296px] px-4 sm:px-6 mb-10 relative z-10">
      <div
        class="border shadow-lg bg-white p-4 rounded flex flex-col lg:flex-row gap-4"
      >
        <!-- Image Section -->
        <div class="w-full lg:w-1/2 p-2 flex justify-center">
          <img
            src="/assets/images/programs/formimage.png"
            alt=""
            class="w-full max-h-[400px] sm:max-h-[500px] md:max-h-[600px] lg:max-h-[760px] max-w-full object-cover rounded"
          />
        </div>

        <!-- Form Section -->
        <div class="bg-white p-4 sm:p-6 rounded-xl w-full lg:w-1/2">
          <h1
            class="text-[24px] sm:text-[28px] lg:text-[32px] font-semibold text-webBlack mb-4"
          >
            Make a Donation
          </h1>

          <form>
            <!-- Donation Amount -->
            <div class="mb-4">
              <label
                class="block font-semibold mb-2 text-[16px] sm:text-[18px] text-webBlack"
              >
                Choose a donation amount
              </label>
              <div class="space-y-3 text-gray-800">
                <div class="flex items-center !mt-4">
                  <input
                    type="radio"
                    id="amount500"
                    name="donationAmount"
                    value="500"
                    class="!mr-4 !accent-orange scale-150"
                    checked
                  />
                  <label for="amount500" class="text-xl sm:text-2xl"
                    >₹ 500</label
                  >
                </div>
                <div class="flex items-center !mt-4">
                  <input
                    type="radio"
                    id="amount1000"
                    name="donationAmount"
                    value="1000"
                    class="!mr-4 !accent-orange scale-150"
                  />
                  <label for="amount1000" class="text-xl sm:text-2xl"
                    >₹ 1000</label
                  >
                </div>
                <div class="flex items-center !mt-4">
                  <input
                    type="radio"
                    id="amount5000"
                    name="donationAmount"
                    value="5000"
                    class="!mr-4 !accent-orange scale-150"
                  />
                  <label for="amount5000" class="text-xl sm:text-2xl"
                    >₹ 5000</label
                  >
                </div>
                <div class="flex items-center !mt-4">
                  <input
                    type="radio"
                    id="customAmount"
                    name="donationAmount"
                    value="custom"
                    class="!mr-4 !accent-orange scale-150"
                  />
                  <label for="customAmount" class="text-xl sm:text-2xl"
                    >Custom donation</label
                  >
                </div>
              </div>
            </div>

            <!-- Donation Frequency -->
            <div class="mb-8">
              <label
                class="block font-semibold mb-2 text-[16px] sm:text-[18px] text-webBlack"
              >
                Choose a donation frequency
              </label>
              <div class="space-y-3 text-gray-800">
                <div class="flex items-center !mt-4">
                  <input
                    type="radio"
                    id="monthly"
                    name="donationFrequency"
                    value="monthly"
                    class="!mr-4 !accent-orange scale-150"
                    checked
                  />
                  <label for="monthly" class="text-xl sm:text-2xl"
                    >Monthly</label
                  >
                </div>
                <div class="flex items-center !mt-4">
                  <input
                    type="radio"
                    id="onetime"
                    name="donationFrequency"
                    value="onetime"
                    class="!mr-4 !accent-orange scale-150"
                  />
                  <label for="onetime" class="text-xl sm:text-2xl"
                    >One time</label
                  >
                </div>
              </div>
            </div>

            <!-- Paragraph -->
            <p class="mb-4 text-[16px] sm:text-[18px] text-webBlack">
              Your generosity fuels community-driven change. From scholarships
              to mentorship, we’re ensuring children have the support they need
              to succeed, today and tomorrow.
            </p>

            <!-- Button -->
            <div class="flex justify-start">
              <Button btn="btn1" title="Donate" />
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="absolute  bottom-0 w-full h-96 bg-white ">
    </div>
  </div>
</div>
