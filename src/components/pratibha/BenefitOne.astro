  font-family: Poppins;
font-weight: 400;
font-size: 1.3rem;
line-height: 100%;
letter-spacing: 0%;

}

.hero-images {
  flex: 1;
  position: relative;
  min-height: 600px;
  margin-left: 3rem;
}

.hero-image-top, 
.hero-image-bottom {
  width: 100%;
  max-width: 550px;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
}

.hero-image-top {
  position: relative;
  z-index: 2;
  margin-bottom: 1rem;
}

.hero-image-bottom {
  position: absolute;
  right: 0;
  top: 45%;
  z-index: 1;
}

.hero-image-top img,
.hero-image-bottom img {
  width: 100%;
  height: auto;
  display: block;
}

.kiran-images {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-top: 2rem;
}

.image-top, 
.image-bottom {
  width: 100%;
}

.image-bottom {
  display: flex;
  gap: 1rem;
}

.image-bottom-left {
  flex: 2;
}

.image-bottom-right {
  flex: 1;
}

.kiran-image {
  width: 100%;
  height: 200px;
  object-fit: cover;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  aspect-ratio: 6/3;
}

.kiran-image-small {
  width: 100%;
  height: auto;
  object-fit: cover;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  aspect-ratio: 16/9;
}

.orange-box {
  background-color: #FF5C00;
  width: 100%;
  height: 100%;
  border-radius: 12px;
  aspect-ratio: 1/1;
}

/* Responsive design */
@media (max-width: 1200px) {
  .hero-title {
    font-size: 3rem;
  }
  
  .support-title {
    font-size: var(--font-title-sub);
  }
  
  .hero-images {
    min-height: 500px;
  }
}

@media (max-width: 992px) {
  .hero-container {
    flex-direction: column-reverse;
    gap: 2rem;
  }
  
  .hero-content {
    padding-right: 0;
    width: 100%;
  }
  
  .hero-title {
    font-size: 2.8rem;
  }
  
  .hero-images {
    width: 100%;
    min-height: 400px;
    margin: 0 auto;
    /* order: 2; */
  }
  
  .hero-image-top,
  .hero-image-bottom {
    max-width: 450px;
  }
  
  .orange-rectangle {
    height: 100%;
    width: 60px;
  }
