font-size: 0.9rem;

line-height: 1.7rem;
letter-spacing: 0%;
color: #49494C;
padding: 1.5rem 0;
}

.support-subtitle {
  font-size: 1.125rem;
  font-weight: 400;
  margin: 0 0 1.5rem 0;
  color: #49494C;
}

.support-list {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.support-item {
  display: flex;
  font-size: 1.124rem;
  align-items: center;
  gap: 1rem;
}

.support-icon {
  /* font-size: 1.8rem; */
  /* line-height: 1; */
  width: 33;
height: 33;

}

.support-text {
  /* font-size: 1.2rem;
  font-weight: 600; */
