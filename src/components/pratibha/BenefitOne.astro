  }
}

@media (max-width: 768px) {
  .hero-container {
    justify-content: center;
    align-items: center;
    /* padding: 2rem 1rem; */
  }
  
  .kiran-image {
    height: 100%;
  }
  .hero-title {
    width: 100%;
    /* display: block; */
    font-size: 2.5rem;
  }
  
  .hero-description {
    font-size: 1.1rem;
  }
  
  .support-title {
    font-size: 2rem;
  }
  
  .support-description {
    font-size: 1rem;
  }
  .kiran-image {
    width: 100%; 
  }
  .hero-images {
    min-height: 28rem;
  }
  
  .hero-image-top,
  .hero-image-bottom {
