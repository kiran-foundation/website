    text-align: center;
    width: 100%;
  }
  .kiran-image {
    height: 100%;
  }
  .hero-title {
    font-size: 3rem;
  }
  
  .support-title {
    font-size: var(--font-title-sub);
  }
  
  .hero-images {
    min-height: 500px;
  }
}

