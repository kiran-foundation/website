---
import { getEntry } from "astro:content";
const benefits = (await getEntry("pratibha", "benefits")).data;
const image1 = '/assets/images/pratibha_page/group-1.png';
const image2 = '/assets/images/pratibha_page/group-2.png';

const {covers,supports,title,description} = benefits;

---

<section class="hero-section">
  <h1 class="hero-title">{title}</h1>
<div class="hero-container">
  <div class="hero-content">
    {description.map((item) =>
    //  <p class="text-gray-700 text-lg mb-6">{item}</p>
     <p class="hero-description">
       {item}
     </p>
     )}
    
    {supports.map((item) => 
    // <p class="text-gray-700 text-lg mb-6">{item}</p>
    <div class="financial-support">
      <h2 class="support-title">{item?.support}</h2>
      <p class="support-description">
      {item?.desc}
      </p>
    </div>
    
    )}

    
    <div class="support-items">
      <h3 class="support-subtitle">What we cover</h3>
      <div class="support-list">
      {covers.map((items) => 
      // <p class="text-gray-700 text-lg mb-6">{title}</p>
      
      <div class="support-item">
        <div class="support-icon">
          <img src={items.svg} alt="" width="44" height="44">
          </div>
        <div class="support-text font-poppins">{items.title}</div>
      </div>
      )}
      
        
      </div>
    </div>
  </div>
  
  <div class="kiran-images">
    <div class="image-top">
      <img 
        src={image1} 
        alt="Students from Kiran Foundation" 
        class="kiran-image" 
      />
    </div>
    <div class="image-bottom">
      <div class="image-bottom-left">
        <img 
          src={image2} 
          alt="More students from Kiran Foundation" 
          class="kiran-image-small" 
        />
      </div>
      <div class="image-bottom-right">
        <div class="orange-box"></div>
      </div>
    </div>
  </div>
</div>
</section>

<style>
  
h1 {
  /* padding-bottom: 3rem; */
  width: 60%;
}
.hero-section {
  width: 100%;
  background-color: #ffffff;
  font-family: 'Source Serif Pro', serif;
  padding: 3rem 0rem;
  overflow: hidden;
}

.hero-container {
  display: flex;
  align-items: flex-start;
  max-width: 1440px;
  margin: 0 auto;
  /* gap: 8rem; */
}

.hero-content {
  flex: 1;
  padding-right: 2rem;
}

.hero-title {
  font-family: Merriweather;
font-weight: 400;
font-size: 2.4rem;
line-height: 150%;
letter-spacing: -2.2%;
margin-left: 0%;
  /* font-size: 3.5rem;
  font-weight: 700;
  line-height: 1.1;
  color: #222222;
  margin: 0 0 2rem 0; */
}

.hero-description {

  font-family: Poppins;
font-weight: 400;
font-size: 0.9rem;
line-height: 2rem;
letter-spacing: 0%;
color: #49494C;
padding: 1.5rem 0;

}

.financial-support {
  margin-bottom: 2.5rem;
}

.support-title {
  /* font-size: 2.5rem;
  font-weight: 700;
  margin: 0 0 1.5rem 0; */
  color: #1E1E1E;

  font-family: Poppins;
font-weight: 600;
font-size: 1.5rem;
line-height: 100%;
letter-spacing: 0%;

}

.support-description {
  font-family: Poppins;
font-weight: 400;
font-size: 0.9rem;

line-height: 1.7rem;
letter-spacing: 0%;
color: #49494C;
padding: 1.5rem 0;
}

.support-subtitle {
  font-size: 1.125rem;
  font-weight: 400;
  margin: 0 0 1.5rem 0;
  color: #49494C;
}

.support-list {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.support-item {
  display: flex;
  font-size: 1.124rem;
  align-items: center;
  gap: 1rem;
}

.support-icon {
  /* font-size: 1.8rem; */
  /* line-height: 1; */
  width: 33px;
height: 33px;

}

.support-text {
  /* font-size: 1.2rem;
  font-weight: 600; */
  color: #333;
  font-family: Poppins;
font-weight: 400;
font-size: 1.3rem;
line-height: 100%;
letter-spacing: 0%;

}

.hero-images {
  flex: 1;
  position: relative;
  min-height: 600px;
  margin-left: 3rem;
}

.hero-image-top, 
.hero-image-bottom {
  width: 100%;
  max-width: 550px;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
}

.hero-image-top {
  position: relative;
  z-index: 2;
  margin-bottom: 1rem;
}

.hero-image-bottom {
  position: absolute;
  right: 0;
  top: 45%;
  z-index: 1;
}

.hero-image-top img,
.hero-image-bottom img {
  width: 100%;
  height: auto;
  display: block;
}

.kiran-images {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-top: 2rem;
}

.image-top, 
.image-bottom {
  width: 100%;
}

.image-bottom {
  display: flex;
  gap: 1rem;
}

.image-bottom-left {
  flex: 2;
}

.image-bottom-right {
  flex: 1;
}

.kiran-image {
  width: 100%;
  height: 12.5rem;
  object-fit: cover;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  aspect-ratio: 6/3;
}

.kiran-image-small {
  width: 100%;
  height: auto;
  object-fit: cover;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  aspect-ratio: 16/9;
}

.orange-box {
  background-color: #FF5C00;
  width: 100%;
  height: 100%;
  border-radius: 12px;
  aspect-ratio: 1/1;
}

