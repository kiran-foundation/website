---
import { getEntry } from "astro:content";
import PratibhaLayout from "../../layouts/PratibhaLayout.astro";
const benefits = (await getEntry("pratibha", "benefits")).data;
const image1 = '/assets/images/pratibha_page/group-1.png';
const image2 = '/assets/images/pratibha_page/group-2.png';
const {mt} = Astro.props;
const {covers,supports,title,description} = benefits;

---

<PratibhaLayout mt={`${mt} `}>
  <div slot="content" class="ds">
    <div class="hero-contain    flex flex-col md:flex-row gap-16">
      <div class="hero-content max-w-[100%] mx-auto ">
    <h1 class="hero-title">{title}</h1>
    {description.map((item) =>
     <p class="hero-description  break-words">
       {item}
     </p>
     )}
    
    {supports.map((item) => 
    <div class="financial-support">
      <h2 class="support-title">{item?.support}</h2>
      <p class="support-description">
      {item?.desc}
      </p>
    </div>
    )}

    <div class="support-items">
      <h3 class="support-subtitle">What we cover</h3>
      <div class="support-list">
      {covers.map((items) => 
      <div class="support-item">
        <div class="support-icon">
          <img src={items.svg} alt="" width="44" height="44">
          </div>
        <div class="support-text font-poppins">{items.title}</div>
      </div>
      )}
      </div>
    </div>
  </div>
</Fragment>
<Fragment slot="image-grid">
  <div class="kiran-images md:max-w-[596px] mx-auto">
    <div class="image-top">
      <img 
        src={image1} 
        alt="Students from Kiran Foundation" 
        class="kiran-image" 
      />
    </div>
    <div class="image-bottom">
      <div class="image-bottom-left">
        <img 
          src={image2} 
          alt="More students from Kiran Foundation" 
          class="kiran-image-small" 
        />
      </div>
      <div class="image-bottom-right">
        <div class="orange-box"></div>
      </div>
    </div>
  </div>
</div>
</Fragment>
</PratibhaLayout>

