  flex-direction: column;
  gap: 1rem;
  margin-top: 2rem;
}

.image-top, 
.image-bottom {
  width: 100%;
}

.image-bottom {
  display: flex;
  gap: 1rem;
}

.image-bottom-left {
  flex: 2;
}

.image-bottom-right {
  flex: 1;
}

.kiran-image {
  width: 100%;
  height: 12.5rem;
  object-fit: cover;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  aspect-ratio: 6/3;
}

.kiran-image-small {
  width: 100%;
  height: auto;
  object-fit: cover;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  aspect-ratio: 16/9;
}

.orange-box {
  background-color: #FF5C00;
  width: 100%;
  height: 100%;
  border-radius: 12px;
  aspect-ratio: 1/1;
}
