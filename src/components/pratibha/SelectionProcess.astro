---
import { getEntry } from "astro:content";
import TestimonialsCarousel from "../common/TestimonialsCarousel.astro";
const selectionProcess = (await getEntry("pratibha", "selection-process")).data;
const {
  heading,

  applyButton,
  querys,
  statusButton,
} = selectionProcess;

const { mt } = Astro.props;
---

<section class={`bg-[#f1f1f1] py-[6.25rem]  w-full ${mt}`}>
  <div
    class="mx-auto max-w-full lg:max-w-[79.5rem] px-[1.5rem] mb-[7.5rem]"
    data-aos="fade-right"
  >
    <div class="max-w-full lg:max-w-[43.5rem] space-y-6">
      <h2 class="pratibha-heading py-2">{heading}</h2>

      {
        querys &&
          querys.map((item: { title: string; description: string[]; }) => (
            <div>
              <h3 class="pratibha-subheading ">{item?.title}</h3>
              <div>
                <ul class="list-disc ml-8 mt-[1.5rem] ">
                  {item?.description.map((desc: string) => (
                    <li class=" pratibha-description  ">{desc}</li>
                  ))}
                </ul>
              </div>
            </div>
          ))
      }

      <div class="flex gap-6">
        <button class="bg-[#D33C0D] py-[1rem] px-[1.5rem] rounded-lg">
          <a
            href={applyButton?.herf}
            class="font-poppins text-white text-[1rem] font-bold"
          >
            {applyButton?.title}
          </a>
        </button>
        <button
          class="bg-transparent py-[1rem] px-[1.5rem] border border-black rounded-lg"
        >
          <a
            href={statusButton?.herf}
            class="font-poppins text-black text-[1rem] font-bold"
          >
            {statusButton?.title}
          </a>
        </button>
      </div>
      <!-- <div class="h-[7.5rem]"></div> -->
    </div>
  </div>
  <TestimonialsCarousel pageTag="home" bgcolor="bg-white" />
</section>
