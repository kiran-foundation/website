---
import { getEntry } from "astro:content";
const faqData = (await getEntry("pratibha", "faq")).data;


// import { Accordion, AccordionContent, AccordionItem, AccordionTrigger } from "@/components/ui/accordion";


---
<section class="w-full max-w-7xl mx-auto  flex flex-col md:flex-row gap-8">
    <div class="w-full md:w-2/5"> <h2 class="text-4xl font-bold text-gray-900 mb-2">{faqData.title.split('Check out the FAQ')[0]}</h2>
        <h3 class="text-4xl font-bold text-[#1E1E1E] mb-6 font-poppins">Check out the FAQ</h3>
        
        <p class="text-gray-700">
          {faqData.paragraph}
        </p>
      </div>
      
      <div class="w-full md:w-3/5">
        <div class="space-y-4">
          {faqData.questions.map((item, index) => (
            <div  class="border border-gray-200 rounded-md overflow-hidden">
              <details class="group">
                <summary class="w-full px-6 py-4 flex items-center justify-between text-left font-medium cursor-pointer">
                  <span class="text-left font-medium font-poppins  text-[#383D38]">{item.question}</span>
                  <div class="flex items-center justify-center">
                    {/* <Plus class="h-5 w-5 shrink-0 text-gray-500 group-open:hidden" /> */}
                    {/* <Minus class="h-5 w-5 shrink-0 text-gray-500 hidden group-open:block" /> */}
                  </div>
                </summary>
                <div class="px-6 pb-4 pt-0 text-[#383D38]  font-Inter">
                  {item.answer}
                </div>
              </details>
            </div>
          ))}
        </div>
      </div>
    </section>