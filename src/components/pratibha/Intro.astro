---
import { getEntry } from "astro:content";
const aboutPratibha = (await getEntry("pratibha", "about")).data;
const { title, description, imageGrid, image } = aboutPratibha;
const { mt } = Astro.props;
---

<section
  class=`justify-center lg:max-w-[81rem] mx-auto     ${mt}   md:gap-16 grid tb:grid-cols-1 md:grid-cols-2 gap-16 sm:gap-[1.5rem]  tb:items-center  overflow-hidden`
>
  <div
    class="lg:max-w-[39.75rem] mx-auto overflow-hidden"
    data-aos="fade-right"
  >
    <h1 class="pratibha-heading py-[0.75rem] max-w-[39.75rem]
max-h-[4.5rem];">
      {title}
    </h1>

    {
      description.map((item: string) => (
        <p class="  py-[0.75rem] pratibha-description  ">{item}</p>
      ))
    }
  </div>
  <div
    class="image-team-grid w-full lg:max-w-[37.25rem] mx-auto overflow-hidden"
    data-aos="fade-left"
  >
    {
      image ? (
        <div class="singleImage overflow-hidden">
          <img class="" src={image} alt="" />
        </div>
      ) : (
        <div class="grid grid-cols-[65%_30%] grid-rows-[auto_1fr] gap-4 w-full h-full">
          <div class="team-top-image col-span-2 w-full h-full">
            <img
              src={imageGrid.image1}
              alt=""
              class="rounded-xl w-full h-full object-cover"
            />
          </div>

          <div class="bottom-left w-full h-full">
            <img
              class=" max-w-[37.25rem]"
              src={imageGrid.image2}
              alt=""
              class="w-full h-full object-cover aspect-video rounded-xl"
            />
          </div>

          <div class="bottom-right w-full h-full">
            <img
              src={imageGrid.image3}
              alt=""
              class="rounded-xl w-full h-full object-cover"
            />
          </div>
        </div>
      )
    }
  </div>
</section>
