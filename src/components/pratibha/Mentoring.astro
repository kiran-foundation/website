---
import { getEntry } from "astro:content";
const aboutMentoring = (await getEntry("pratibha", "mentoring")).data;
const { mt } = Astro.props;
const { title, image, image1, image2, image3, description, subtitle, assist } =
  aboutMentoring;
---

<!-- Career Guidance and Mentorship Page -->
<section
  class=`   justify-center  lg:max-w-[81rem] mx-auto ${mt}   md:gap-16 grid tdb:grid-cols-1 md:grid-cols-2 gap-10   overflow-hidden items-center `
>
  <div class="lg:max-w-[39.75rem] mx-auto items-center overflow-hidden">
    <h2 class="pratibha-subheading leading-[150%] mb-6">{title}</h2>
    {
      description.map((item: string) => (
        <p class=" pratibha-description leading-8 mb-6">{item}</p>
      ))
    }

<ul class="xl:space-y-10 space-y-6">
  <p class="pratibha-description mb-6">{subtitle}</p>
  {
    assist.map((item: { svg: string; title: string }) => (
      <li
        class="flex items-center gap-4"
        data-aos="fade-up"
        data-aos-duration="1200"
        data-aos-offset="120px"
        data-disable-parallax-down="lg"
      >
        <div class="flex-shrink-0 w-[2.75rem] h-[2.75rem] flex items-center justify-center mt-1">
                          <i class="text-nav text-2xl ai-check"></i>

        </div>
        <div class="pratibha-subtile leading-[32px] flex-grow">{item?.title}</div>
      </li>
    ))
  }
</ul>
  </div>
  <div
    class="image-team-grid mx-auto w-full lg:max-w-[37.25rem] overflow-hidden"
    data-aos="fade-up"
    data-aos-duration="1200"
    data-aos-offset="120px"
    data-disable-parallax-down="lg"
  >
    {
      image ? (
        <div class="singleImage ">
          <img
            src={image}
            alt="Students mentorship"
            class="w-[596px] h-[524px] object-cover rounded-md"
            loading="lazy"

          />
        </div>
      ) : (
        <div class="grid grid-cols-[70%_30%] grid-rows-[auto_1fr] gap-4 w-full h-full">
          <div class="team-top-image col-span-2 w-full h-full">
            <img
              src={image1}
              alt=""
              class="rounded-xl w-full h-full object-cover"
            />
          </div>

          <div class="bottom-left w-full h-full">
            <img
              src={image2}
              alt=""
              class="w-full h-full object-cover aspect-video rounded-xl"
            />
          </div>

          <div class="bottom-right w-full h-full">
            <img
              src={image3}
              alt=""
              class="rounded-xl w-full h-full object-cover"
            />
          </div>
        </div>
      )
    }
  </div>
</section>
