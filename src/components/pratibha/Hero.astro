---
import { getEntry } from "astro:content";
const { slug, collection, imageWidth = 608, imageHeight = 630 } = Astro.props;

const heroEntry = (await getEntry(collection, slug)) as {
  data: {
    heroSubtitle: string;
    greenUnderline: string;
    greenUnderlineSvg: string;
    heading2: string;
    heading: string;
    description: string;
    image: string;
  };
};

const {
  greenUnderline,
  greenUnderlineSvg,
  heading,
  heading2,
  description,
  image,
  heroSubtitle,
} = heroEntry.data;
---

<section
  class="w-full relative h-[410px] bg-[#F1F1F1] mt-28 sm:mt-6 md:mt-8 md:h-[512px] lg:mt-8 xl:mt-8"
>
  <div
    class="relative items-center py-10 px-6 flex flex-col w-[340px] h-[330px] md:flex-row md:w-auto md:h-full md:mx-auto md:py-0 lg:max-w-[1296px]"
  >
    <!-- Content Section -->
    <div
      class="relative w-full h-full space-y-8 sm:space-y-16 lg:space-y-8 md:w-3/5 md:px-0 md:h-[257px]"
    >
      <h1
        class="text-[36px] sm:text-[48px] md:text-[56px] lg:text-[60px] font-merriweather font-bold leading-[1.2]"
      >
        <span class="relative inline-block">
          <span class="relative z-10">{greenUnderline}</span>
          <span
            class="absolute bottom-[1px] lg:bottom-[-10px] left-0 w-full z-0"
          >
            <img
              src={greenUnderlineSvg}
              alt="Green Underline"
              class={`absolute ${collection === "pratibha" ? "w-full" : "w-[95%]"} bottom-[4px] left-0 h-auto`}
            />
          </span>
        </span>
        {heading}
        <p class="block">{heading2}</p>
      </h1>
      <p
        class="md:w-[600px] lg:w-[100%] h-[190px] font-normal text-[#49494C] font-poppins leading-[38px] tracking-[0%] text-[20px] sm:text-[24px] md:text-[32px] lg:text-[32px] md:whitespace-pre-line"
      >
        {description}
      </p>
    </div>

    <!-- Image Wrapper (Hidden on Mobile, Uses Dynamic Width & Height) -->
    <div
      class="hidden tb:hidden lg:block absolute bottom-0 right-0 md:right-[-10%] lg:right-0 tb:right-0 z-20 over'"
      style={`width: ${imageWidth}px; height: ${imageHeight}px;`}
    >
      <img
        src={image}
        alt="Hero Image"
        class="w-full h-auto object-cover"
        style="position: absolute; bottom: 0; transform: translateY(-0%);"
      />
    </div>
  </div>
</section>
