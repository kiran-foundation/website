---
import { getEntry } from "astro:content";
import Button from "../common/button.astro";
const {slug,collection,py="160px"} = Astro.props;
const entry = await getEntry(collection, slug) as {
  data?: {
    title?: string;
    paragraph?: string[];
    button?: any[];
    image?: string;
  };
};

// âœ… SAFE DEFAULTS
const {
  title = "",
  paragraph = [],
  button = [],
  image = ""
} = entry?.data ?? {};

---

<section class="bg-[#F1F1F1] my-auto px-4">
  <div
    class=`flex flex-col xl:flex-row justify-center items-center gap-16 mx-auto max-w-[1296px] py-6 md:py-[${py}]`
  >
    <div class="max-w-[636px]">
      <h1 class="heading-1 mb-8">{title}</h1>
      {paragraph.map((para) => <p class=" body-text-3 mb-4">{para}</p>)}

      <div class="flex flex-col md:flex-row gap-4 mt-12">
        {
          button.map(
            (btn) => (
              
                <Button
                  btn={btn.type}
                  title={btn.button}
                  link={btn.path}
                  widthClass=""
                  heightClass="h-[60px]"
                />
              
            ),
          )
        }
      </div>
    </div>
    <div class="">
      <img
        class="rounded-3xl"
        src={image}
        alt=""
        width="592px"
        height="502px"
        loading="lazy"
      />
    </div>
  </div>
</section>
