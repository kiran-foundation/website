---
const { update } = Astro.props;
---

<div class="flex-1 bg-white rounded-xl shadow-sm p-4 md:p-6 dark:bg-gray-800 dark:border-gray-700 hover:shadow-md transition-shadow">
  <a href={update.link} class="block">
    <div class="aspect-auto overflow-hidden rounded-xl">
      <img 
        class="w-full h-full object-cover" 
        src={update.featured_image} 
        alt={update.title || "Update image"}
        loading="lazy"
      />
    </div>
  </a>
  <div class="pt-4">
    <a href={update.link} class="hover:text-primary-600 dark:hover:text-primary-400">
      <h3 class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white mb-2 line-clamp-2">
        {update.title}
      </h3>
    </a>
    <p class="text-gray-700 dark:text-gray-300 mb-3 text-sm md:text-base line-clamp-3">
      {update.summary}
    </p>
    <div class="text-sm text-gray-500 dark:text-gray-400">
      <small>
        Posted on: {new Date(update.date).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </small>
    </div>
  </div>
</div>