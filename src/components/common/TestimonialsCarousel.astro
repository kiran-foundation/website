}

const testimonials: Testimonial[] = [
    { image: '/assets/img/hero/hero-image.jpg', name: 'Naman Jain', location: 'Harda, Madhya Pradesh', text: 'Kiran Foundation not only provides financial support but also offers proper mentorship and guidance.Kiran Foundation not only provides financial support but also offers proper mentorship and guidance.' },
