---
import { getEntry } from "astro:content";
const footerDetails = (await getEntry("footer", "details")).data;
---

<!-- Footer -->
<footer class="footer">
  <div
    class="bg-secondary py-5 d-flex justify-content-center align-items-center"
  >
    <div
      class="container w-100 pt-sm-2 pt-md-3 pt-lg-3"
      style="margin:auto 10%;"
    >
      <div class="row mt-4">
        <!-- Logo & Description -->
        <div class="col-lg-3">
          <div class="logo-container">
            <a class="footer navbar-brand" href="/">
              <img
                src="/Logo.png"
                width="107"
                height="66.61"
                alt="kiran foundation logo"
              />
            </a>
          </div>
          <p class="footer-paragraph fs-sm pb-2 pb-md-3 mb-3 p-2">
            {footerDetails.description}
          </p>
          <div class="mt-3">
            <a
              class="btn btn-secondary btn-icon btn-sm rounded-circle me-2"
              href="https://www.instagram.com/kiran_trust/"
              aria-label="Instagram"
            >
              <i class="ai-instagram"></i>
            </a>
            <a
              class="btn btn-secondary btn-icon btn-sm rounded-circle me-2"
              href="https://www.facebook.com/foundation.kiran"
              aria-label="Facebook"
            >
              <i class="ai-facebook"></i>
            </a>
            <a
              class="btn btn-secondary btn-icon btn-sm rounded-circle"
              href="https://www.linkedin.com/company/kirantrust/"
              aria-label="LinkedIn"
            >
              <i class="ai-linkedin"></i>
            </a>
          </div>
        </div>

        <!-- About Section -->
        <div class="col-lg-3 mt-3 d-flex justify-content-center">
          <!-- <a class="nav-link" href="/about">
            <h4 class="h6 fw-bold">{footerDetails.aboutTitle.about}</h4>
          </a> -->
          <ul class="footer-list-style nav flex-column">
            <li class="nav-item mb-1">
              <a href="/about" class="nav-link p-0">
                <h4 class="h6 fw-bold" style="padding-left:0; text-align:left;">{footerDetails.aboutTitle.about}</h4>
              </a>
            </li>
            <li class="nav-item mb-1">
              <a class="nav-link p-0" href="/compliance"
                >{footerDetails.aboutTitle.compliance}</a
              >
            </li>
            <li class="nav-item mb-1">
              <a class="nav-link p-0" href="/newsletter"
                >{footerDetails.aboutTitle.newsletter}</a
              >
            </li>
            <li class="nav-item mb-2">
              <a class="nav-link p-0" href="/privacy-policy"
                >{footerDetails.aboutTitle.policy}</a
              >
            </li>
          </ul>
        </div>

        <!-- Contact Section -->
        <div class="col-lg-3 mt-3 d-flex justify-content-center">
          <!-- <a class="nav-link" href="/contact">
            <h4 class="h6 fw-bold">{footerDetails.contactTitle.contact}</h4>
          </a> -->
          <ul class="footer-list-style nav flex-column">
            <li>
              <a>
                <a class="nav-link p-0" href="/contact">
                  <h4 class="h6 fw-bold">
                    {footerDetails.contactTitle.contact}
                  </h4>
                </a>
              </a>
            </li>
            <li>
              <a
                class="nav-link p-0 d-flex align-items-center"
                href="mailto:info@kiran.foundation"
              >
                <i class="fa fa-envelope me-2"></i>
                {footerDetails.contactTitle.info}
              </a>
            </li>
            <li>
              <a
                class="nav-link p-0 d-flex align-items-center"
                href="tel:919303997100"
              >
                <i class="fa fa-phone me-2"></i>
                {footerDetails.contactTitle.phone}
              </a>
            </li>
            <li>
              <a
                class="nav-link p-0 d-flex align-items-center"
                href="https://wa.me/919880141412"
              >
                <i class="fa fa-whatsapp me-2"></i>
                {footerDetails.contactTitle.whatsApp}
              </a>
            </li>
          </ul>
        </div>

        <!-- Volunteering Section -->
        <div class="col-lg-3 mt-3 d-flex justify-content-center">
          <!-- <h4 class="h6 fw-bold">{footerDetails.listTitle.heading}</h4> -->
          <ul class="nav flex-column footer-list-style">
            <li>
                <h4 class="h6 fw-bold">{footerDetails.listTitle.heading}</h4>
            </li>
            <li>
              <a
                class="nav-link p-0 d-flex align-items-center"
                href="/volunteering"
              >
                <i class="fa fa-user me-2"></i>
                {footerDetails.listTitle.volunteerWithUs}
              </a>
            </li>
            <li>
              <a class="nav-link p-0 d-flex align-items-center" href="/">
                <i class="fa fa-briefcase me-2"></i>
                {footerDetails.listTitle.internshipOpportunities}
              </a>
            </li>
            <li>
              <a
                class="nav-link p-0 d-flex align-items-center"
                href="/become-mentor"
              >
                <i class="fa fa-graduation-cap me-2"></i>
                {footerDetails.listTitle.becomeMentor}
              </a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Copyright -->
      <div class="footer-copy-right p-2 text-center text-body-secondary mt-3">
        &copy; Kiran Foundation
      </div>
    </div>
  </div>
</footer>
