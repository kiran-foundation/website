---
import { getEntry } from "astro:content";
const footerDetails = (await getEntry("footer", "details")).data;
---

<!-- Footer -->
<footer class="footer">
  <div
    class="bg-secondary py-5 d-flex justify-content-center align-items-center"
  >
    <div class="container w-100 px-4">
      <div class="row text-center">
        <!-- Logo & Description text-md-start -->
        <div class="col-sm-6 col-md-3">
          <div class="logo-container">
            <a class="footer navbar-brand p-2" href="/">
              <img
                src="/Logo.png"
                width="107"
                height="66.61"
                alt="kiran foundation logo"
              />
            </a>
          </div>
          <p class="footer-paragraph fs-sm p-2">
            {footerDetails.description}
          </p>
          <div class="d-flex flex-row gap-2">
            <!-- justify-content-md-start -->

            <a
              class="btn btn-secondary btn-icon btn-sm rounded-circle"
              href="https://www.instagram.com/kiran_trust/"
              aria-label="Instagram"
            >
              <i class="ai-instagram"></i>
            </a>
            <a
              class="btn btn-secondary btn-icon btn-sm rounded-circle"
              href="https://www.facebook.com/foundation.kiran"
              aria-label="Facebook"
            >
              <i class="ai-facebook"></i>
            </a>
            <a
              class="btn btn-secondary btn-icon btn-sm rounded-circle"
              href="https://www.linkedin.com/company/kirantrust/"
              aria-label="LinkedIn"
            >
              <i class="ai-linkedin"></i>
            </a>
          </div>
        </div>

        <!-- About Section -->
        <div
          class="col-sm-6 col-md-3 mt-4 pt-4 mt-md-0 d-flex align-item-center justify-content-center"
        >
          <div>
            <ul class="footer-list-style nav flex-column">
              <li>
                <a
                  href="/about"
                  class="h6 nav-link d-flex align-items-center p-2 text-align-center"
                  style="color:black;"
                >
                  {footerDetails.aboutTitle.about}
                </a>
              </li>
              <li>
                <a
                  class="nav-link d-flex align-items-center p-1 text-align-center"
                  href="/compliance">{footerDetails.aboutTitle.compliance}</a
                >
              </li>
              <li>
                <a
                  class="nav-link d-flex align-items-center p-1 text-align-center"
                  href="/newsletter">{footerDetails.aboutTitle.newsletter}</a
                >
              </li>
              <li>
                <a
                  class="nav-link d-flex align-items-center p-1 text-align-center"
                  href="/privacy-policy">{footerDetails.aboutTitle.policy}</a
                >
              </li>
            </ul>
          </div>
        </div>

        <!-- Contact Section -->
        <div
          class="col-sm-6 col-md-3 mt-4 pt-4 mt-md-0 d-flex align-item-center justify-content-center"
        >
          <div>
            <ul class="footer-list-style nav flex-column">
              <li>
                <a
                  class="h6
                nav-link
                d-flex
                align-items-center
                p-2
                text-align-center"
                  href="/contact"
                  style="color:black;"
                >
                  {footerDetails.contactTitle.contact}
                </a>
              </li>
              <li>
                <a
                  class="nav-link d-flex align-items-center p-2 text-align-center"
                  href="mailto:info@kiran.foundation"
                >
                  {footerDetails.contactTitle.info}</a
                >
              </li>
              <li>
                <a
                  class="nav-link d-flex align-items-center p-1 text-align-center"
                  href="tel:919303997100"
                >
                  {footerDetails.contactTitle.phone}</a
                >
              </li>
              <li>
                <a
                  class="nav-link d-flex align-items-center p-1 text-align-center"
                  href="https://wa.me/919880141412"
                >
                  {footerDetails.contactTitle.whatsApp}</a
                >
              </li>
            </ul>
          </div>
        </div>

        <!-- Volunteering Section -->
        <div
          class="col-sm-6 col-md-3 mt-4 pt-4 mt-md-0 d-flex align-item-center justify-content-center"
        >
          <div>
            <ul class="nav flex-column footer-list-style">
              <li>
                <h4
                  class="h6
                nav-link
                d-flex
                align-items-center
                p-2
                text-align-centerh6
                nav-link
                d-flex
                align-items-center
                p-2
                text-align-center"
                  style="color:black;"
                >
                  {footerDetails.listTitle.heading}
                </h4>
              </li>
              <li>
                <a
                  class="nav-link d-flex align-items-center p-1 text-align-center"
                  href="/volunteering"
                >
                  {footerDetails.listTitle.volunteerWithUs}</a
                >
              </li>
              <li>
                <a
                  class="nav-link d-flex align-items-center p-1 text-align-center"
                  href="/"
                >
                  {footerDetails.listTitle.internshipOpportunities}</a
                >
              </li>
              <li>
                <a
                  class="nav-link d-flex align-items-center p-1 text-align-center"
                  href="/become-mentor"
                >
                  {footerDetails.listTitle.becomeMentor}</a
                >
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Copyright -->
      <div class="footer-copy-right p-2 text-center text-body-secondary mt-3">
        &copy; Kiran Foundation
      </div>
    </div>
  </div>
</footer>
