---
import Heading from "./heading.astro";
import TestimonialsCarousel from "./TestimonialsCarousel.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Testimonial</title>
    </head>

    <body>
        <div class="testimonial-container mt-5">
            <div class="heading-container col d-flex justify-content-center">
                <Heading title="Testimonials" />
            </div>
                <TestimonialsCarousel pageTag="home" />
            </div>
        </div>
    </body>
    <style>
        .testimonial-container {
            margin: auto;
            max-width: 1290px;
        }
        .heading-container{
          
            max-width:  600px;
            height: 66px;
            margin: auto;
        }
    </style>
</html>
