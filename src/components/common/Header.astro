                  {headerDetails.shaktiMenu.menuOptionSeven}
                </a>
              </li>
            </li>
          </ul>

          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              data-bs-toggle="dropdown"
              data-bs-auto-close="outside"
              aria-expanded="false"
            >
              {headerDetails.whoWeAreTitle}
            </a>
            <ul class="dropdown-menu">
              <li class="dropdown">
                <a
                  class="dropdown-item"
                  href={headerDetails.whoWeAreLinks.linkOne}
