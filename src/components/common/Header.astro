   import { getEntry } from "astro:content";
   const headerDetails = ( await getEntry("header", "details")).data

   console.log(headerDetails)

   
---



<!-- Navbar. Remove 'fixed-top' class to make the navigation bar scrollable with the page -->
<header class="navbar navbar-expand-lg fixed-top" style="background-color: #ffffff;">
  <div class="container">

    <!-- Navbar brand (Logo) -->
    <a class="navbar-brand pe-sm-3" href="index.html">
      <span class="text-primary flex-shrink-0 me-2">
        <svg width="35" height="32" viewBox="0 0 36 33">
          <img  src="/Logo.png" width="107" height="66.61" alt="kiran foundation logo">
        </svg>
      </span>
    </a>

    <div class=" space-x-4 order-lg-3 ">
      <a class="btn btn-primary btn-sm fs-sm order-lg-3 d-none d-sm-inline-flex" href="/donation" target="_blank" rel="noopener">
        <i class=" fs-xl me-2 ms-n1"></i>
       {headerDetails.button}
      </a>
      <a class="btn btn-outline-primary space-x-4 btn-sm fs-sm order-lg-3 d-none d-sm-inline-flex" href="/volunteering">{headerDetails.buttonVolunteer}</a>
      <!-- <button type="button" class="btn btn-outline-primary space-x-4 btn-sm fs-sm order-lg-3 d-none d-sm-inline-flex">Be a Volunteer</button>   -->
    </div>

    <!-- Mobile menu toggler (Hamburger) -->
    <button class="navbar-toggler ms-sm-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar collapse (Main navigation) -->
    <nav class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav navbar-nav-scroll me-auto" style="--ar-scroll-height: 520px;">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="/" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">{headerDetails.programe}</a>
          <ul class="dropdown-menu">
            <li class="dropdown">
              <a class="dropdown-item" href="/Pratibha"  aria-expanded="false">{headerDetails.pratibha}</a>
            </li>
            <li class="dropdown">
              <a class="dropdown-item" href="/shakti">{headerDetails.shakti}</a>
            </li>
            <li class="dropdown">
              <a class="dropdown-item" href="/" >{headerDetails.samman}</a>
            </li>
            <li class="dropdown">
              <a class="dropdown-item" href="/" >{headerDetails.gyan}</a>
            </li>
          </ul>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/about">{headerDetails.about}</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/">{headerDetails.contact}</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/src/components/About/gallery.astro">{headerDetails.gallery}</a>
        </li>
      </ul>
    </nav>
  </div>
</header>