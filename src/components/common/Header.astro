---
import { getEntry } from "astro:content";
const headerDetails = (await getEntry("header", "details"))?.data;
---

<!-- Navbar -->
<header
  class="navbar navbar-expand-lg fixed-top"
  style="background-color: #ffffff;"
>
  <div class="container">
    <!-- Navbar brand (Logo) -->
    <a class="navbar-brand pe-sm-3" href="/">
      <span class="text-primary flex-shrink-0 me-2">
        <img
          src="/Logo.png"
          width="107"
          height="66.61"
          alt="Kiran Foundation Logo"
        />
      </span>
    </a>

    <div class="space-x-4 order-lg-3">
      <a
        class="home-button btn btn-primary btn-sm fs-sm order-lg-3 d-none d-sm-inline-flex fw-bold"
        href="/donation"
        rel="noopener"
      >
        {headerDetails.button}
      </a>
      <a
        class="home-button btn btn-outline-primary space-x-4 btn-sm fs-sm order-lg-3 d-none d-sm-inline-flex fw-bold"
        href="/volunteering"
      >
        {headerDetails.buttonVolunteer}
      </a>
    </div>

    <!-- Mobile menu toggler (Hamburger) -->
    <button
      class="navbar-toggler ms-sm-3"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-label="Toggle navigation"
    >
      <span>
        <svg width="30" height="30" viewBox="0 0 30 30">
          <rect width="30" height="4" fill="#000"></rect>
          <rect y="12" width="30" height="4" fill="#000"></rect>
          <rect y="24" width="30" height="4" fill="#000"></rect>
        </svg>
      </span>
    </button>

    <!-- Navbar Collapse (Main Navigation) -->
    <nav class="collapse navbar-collapse" id="navbarNav">
      <ul
        class="navbar-nav navbar-nav-scroll me-auto"
        style="--ar-scroll-height: 520px;"
      >
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="/pratibha"
            data-bs-toggle="dropdown"
            data-bs-auto-close="outside"
            aria-expanded="false"
          >
            {headerDetails.pratibhaTitle}
          </a>
          <ul class="dropdown-menu">
            <li class="dropdown">
              <a
                class="dropdown-item"
                href={headerDetails.pratibhaLinks.linkOne}
                aria-expanded="false"
              >
                {headerDetails.pratibhaMenu.menuOptionOne}
              </a>

              <li class="dropdown">
                <a
                  class="dropdown-item"
                  href={headerDetails.pratibhaLinks.linkTwo}
                  aria-expanded="false"
                >
                  {headerDetails.pratibhaMenu.menuOptionTwo}
                </a>
              </li>

              <li class="dropdown">
                <a
                  class="dropdown-item"
                  href={headerDetails.pratibhaLinks.linkThree}
                  aria-expanded="false"
                >
                  {headerDetails.pratibhaMenu.menuOptionThree}
                </a>
              </li>

              <li class="dropdown">
                <a
                  class="dropdown-item"
                  href={headerDetails.pratibhaLinks.linkFour}
                  aria-expanded="false"
                >
                  {headerDetails.pratibhaMenu.menuOptionFour}
                </a>
              </li>

              <li class="dropdown">
                <a
                  class="dropdown-item"
                  href={headerDetails.pratibhaLinks.linkFive}
                  aria-expanded="false"
                >
                  {headerDetails.pratibhaMenu.menuOptionFive}
                </a>
              </li>
            </li>
          </ul>
        </li>

        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="/shakti"
            data-bs-toggle="dropdown"
            data-bs-auto-close="outside"
            aria-expanded="false"
          >
            {headerDetails.shaktiTitle}
          </a>
          <ul class="dropdown-menu">
            <li class="dropdown">
              <a
                class="dropdown-item"
                href={headerDetails.shaktiLinks.linkOne}
                aria-expanded="false"
