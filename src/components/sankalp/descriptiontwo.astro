<script>
  document.addEventListener("DOMContentLoaded", function () {
    const carousel = document.getElementById('highlightCarousel');
    const title = document.getElementById('slideTitle');
    const date = document.getElementById('slideDate');
    const desc = document.getElementById('slideDesc');

    function updateContent() {
      const active = carousel?.querySelector('.carousel-item.active');
      if (active instanceof HTMLElement && active.dataset) {
        if (title) title.textContent = active.dataset.title || '';
        if (date) date.textContent = active.dataset.date || '';
        if (desc) desc.textContent = active.dataset.desc || '';
      }
    }

    updateContent();
    carousel?.addEventListener('slid.bs.carousel', updateContent);
  });
</script>
