---
import BootstrapWrapper from './bootstrapWrapper.astro'
import './style.css'
---
<BootstrapWrapper />
<main class="main">

  <section class="hero text-center">
    <h1>Kiran Foundation</h1>
    <p>Empowering Youth, Building the Future</p>
  </section>

  <!--Carousel -->
  <div class="container book-section my-5">
    <div class="row">
      <div class="col-md-6">
        <div id="highlightCarousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active" data-title="Our Guests" data-date="15 June 2025" data-desc="Honouring the leaders and supporters who joined us in our mission.">
              <img src="/Images/3.Our guests.jpeg" class="d-block w-100" alt="Our Guests" />
            </div>
            <div class="carousel-item" data-title="Star Students Awarded" data-date="12 May 2025" data-desc="Recognising brilliant students who achieved excellence.">
              <img src="/Images/4.Star students awarded.jpeg" class="d-block w-100" alt="Star Students" />
            </div>
            <div class="carousel-item" data-title="Book Unveiled" data-date="06 April 2025" data-desc="Launching our inspirational publication for youth.">
              <img src="/Images/13.Book Unveiled_.jpeg" class="d-block w-100" alt="Book Unveiled" />
            </div>
            <div class="carousel-item" data-title="Dedicated Volunteers" data-date="01 March 2025" data-desc="Celebrating our hardworking volunteers.">
              <img src="/Images/14.Dedicated volunteers 1.jpeg" class="d-block w-100" alt="Volunteers" />
            </div>
            <div class="carousel-item" data-title="Website & App Launch" data-date="20 Feb 2025" data-desc="Introducing our new digital platform.">
              <img src="/Images/11.Website App launch_.jpeg" class="d-block w-100" alt="App Launch" />
            </div>
          </div>

          <button class="carousel-control-prev" type="button" data-bs-target="#highlightCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#highlightCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
          </button>
        </div>
      </div>

      <!-- Content Column -->
      <div class="col-md-6">
        <div class="content-panel p-4">
          <h3 id="slideTitle">Our Guests</h3>
          <div class="meta" id="slideDate">15 June 2025</div>
          <p id="slideDesc">Honouring the leaders and supporters who joined us in our mission.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Image  Section -->
  <section class="container my-5">
    <h2 class="text-center mb-4 text-white">Our Images</h2>
    <div class="row g-3 gallery">
