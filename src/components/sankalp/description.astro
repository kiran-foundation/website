    {
      title: "लक्ष्य और संकल्प",
      content: `किरण फाउंडेशन का लक्ष्य ऐसे समाज का निर्माण करना है जहां प्रतिभा एवम् परिश्रम ही सफलता का सर्वोच्च मापदंड हो।`
    }
  ];

  const finalAffirmation = "🌟 आपके छोटे प्रयास भी बड़े परिवर्तन ला सकते हैं। अपने संकल्प पर अडिग रहें। 🌟";

  const bookInterface = document.getElementById('book-interface');
  const closedBookTemplate = document.getElementById('closed-book-template');
  const openBookTemplate = document.getElementById('open-book-template');

  let isBookOpen = false;
  let currentPage = 0;
  let isPageTurning = false;

  function renderClosedBook() {
    bookInterface.innerHTML = '';
    bookInterface.appendChild(closedBookTemplate.content.cloneNode(true));
    const openBtn = bookInterface.querySelector('#open-book-btn');
    openBtn.addEventListener('click', () => {
      isBookOpen = true;
      currentPage = 0;
      renderOpenBook();
    });
  }

  function renderOpenBook() {
    bookInterface.innerHTML = '';
    bookInterface.appendChild(openBookTemplate.content.cloneNode(true));

    const leftPage = document.getElementById('left-page');
    const rightPage = document.getElementById('right-page');
    const closeBtn = document.getElementById('close-book-btn');

    closeBtn.addEventListener('click', () => {
      isBookOpen = false;
      currentPage = 0;
      renderClosedBook();
    });

    function updatePages(direction = 'next') {
      if (isPageTurning) return;
      isPageTurning = true;

      const leftAnim = direction === 'next' ? 'page-turn-left' : 'page-turn-right';
      const rightAnim = direction === 'next' ? 'page-turn-right' : 'page-turn-left';

      leftPage.classList.add(leftAnim);
      rightPage.classList.add(rightAnim);

      leftPage.addEventListener('animationend', () => {
        leftPage.classList.remove(leftAnim);
        rightPage.classList.remove(rightAnim);

        const isLastPage = currentPage >= bookContent.length;

        if (!isLastPage && currentPage < bookContent.length) {
          leftPage.innerHTML = `
            <div style="display:flex; flex-direction: column; height: 100%; font-family: 'Noto Sans Devanagari', sans-serif;">
              <div style="margin-bottom:1.5rem;">
                <div style="width:3rem; height:0.25rem; background:var(--primary-color); border-radius:9999px; margin-bottom:1rem;"></div>
                <h3 style="font-size:1.875rem; font-weight:700; color: var(--text-foreground); margin-bottom:1.5rem;">
                  ${bookContent[currentPage].title}
                </h3>
              </div>
              <div style="flex-grow:1;">
                <p style="font-size:1.25rem; line-height:1.75rem; color: var(--text-foreground); font-weight:500;">
                  ${bookContent[currentPage].content}
                </p>
              </div>
              <div style="text-align:center; font-size:0.875rem; color: var(--text-muted); margin-top:2rem;">
                Page ${currentPage + 1}
              </div>
            </div>
          `;

          rightPage.innerHTML = `
            <div style="height: 100%; display:flex; flex-direction: column; justify-content: space-between; font-family: 'Noto Sans Devanagari', sans-serif;">
              <div style="flex-grow:1; display:flex; align-items:center; justify-content:center;">
                <div style="text-align:center;">
                  <div style="width:6rem; height:6rem; background:var(--primary-color); border-radius:9999px; display:flex; align-items:center; justify-content:center; margin: 0 auto 1.5rem; box-shadow: 0 10px 15px -3px rgba(251, 146, 60, 0.4);">
                    <span style="font-size:1.875rem; color:white;">📖</span>
                  </div>
                  <p style="font-size:1.125rem; color: var(--text-muted); margin-bottom:2rem;">
                    Click the button below to read the next page.
                  </p>
                </div>
              </div>
              <div style="display:flex; justify-content: space-between; align-items:center;">
                ${currentPage > 0 ? `<button id="prev-btn" class="font-hindi text-2xl">◀️</button>` : `<div></div>`}
                <div style="flex-grow:1;"></div>
                <button id="next-btn" class="font-hindi text-2xl">${currentPage < bookContent.length - 1 ? '▶️' : '➡️'}</button>
              </div>
            </div>
          `;

          const nextBtn = document.getElementById('next-btn');
          const prevBtn = document.getElementById('prev-btn');

          if (nextBtn) {
            nextBtn.addEventListener('click', () => {
              if (isPageTurning) return;
              currentPage = Math.min(currentPage + 1, bookContent.length);
              updatePages('next');
            });
          }

          if (prevBtn) {
            prevBtn.addEventListener('click', () => {
              if (isPageTurning) return;
              currentPage = Math.max(currentPage - 1, 0);
              updatePages('prev');
            });
          }
        } else {
          leftPage.innerHTML = `
            <div style="display:flex; flex-direction: column; justify-content:center; align-items:center; height: 100%; text-align:center; font-family: 'Noto Sans Devanagari', sans-serif;">
              <div style="font-size:3rem; margin-bottom:1.5rem;">🙏</div>
              <h3 style="font-size:1.5rem; font-weight:700; color: var(--text-foreground); margin-bottom:1rem;">धन्यवाद</h3>
              <p style="font-size:1.125rem; color: var(--text-muted);">हमारी यात्रा में शामिल होने के लिए आपका आभार</p>
            </div>
          `;

          rightPage.innerHTML = `
            <div style="display:flex; flex-direction: column; justify-content:center; align-items:center; height: 100%; text-align:center; font-family: 'Noto Sans Devanagari', sans-serif;">
              <div style="background: var(--primary-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent; font-weight: 700; font-size: 1.5rem; margin-bottom: 2rem;">
                ${finalAffirmation}
              </div>
             <button id="close-final-btn" class="font-hindi" style="background: linear-gradient(90deg, #fb923c, #f97316); color: white; border: none; font-weight: 600; padding: 0.75rem 2rem; border-radius: 0.5rem; font-size: 1.125rem; box-shadow: 0 10px 15px -3px rgba(251, 146, 60, 0.4); cursor: pointer; transition: opacity 0.3s ease, transform 0.2s ease;">
  ✖️ Click To Close
</button>

            </div>
          `;

          const closeFinalBtn = document.getElementById('close-final-btn');
          closeFinalBtn.addEventListener('click', () => {
            isBookOpen = false;
            currentPage = 0;
            renderClosedBook();
          });
        }

        isPageTurning = false;
      }, { once: true });
    }

    updatePages();
    function handleKeyPress(e) {
      if (!isBookOpen || isPageTurning) return;

      if (e.key === 'ArrowRight' || e.key === ' ') {
        e.preventDefault();
        if (currentPage < bookContent.length) {
          currentPage++;
          updatePages('next');
        }
      } else if (e.key === 'ArrowLeft') {
        e.preventDefault();
        if (currentPage > 0) {
          currentPage--;
          updatePages('prev');
        }
      } else if (e.key === 'Escape') {
        e.preventDefault();
        isBookOpen = false;
        currentPage = 0;
        renderClosedBook();
      }
    }

    window.addEventListener('keydown', handleKeyPress);
  }

  renderClosedBook();
</script>
