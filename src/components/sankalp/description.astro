    0% { transform: rotateY(0deg); }
    100% { transform: rotateY(-180deg); }
  }

  @keyframes pageTurnRight {
    0% { transform: rotateY(0deg); }
    100% { transform: rotateY(180deg); }
  }

  
  .page-turn-left {
    animation-name: pageTurnLeft;
  }

  .page-turn-right {
