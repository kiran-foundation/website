  }

  .page-left, .page-right {
    position: relative;
    padding: 3rem;
    overflow: hidden;
  }

  .page-left {
    border-right: 1px solid #fb923c;
    background: linear-gradient(to bottom right, #fff, #fef3c7);
    backface-visibility: hidden;
transform-style: preserve-3d;
  }

