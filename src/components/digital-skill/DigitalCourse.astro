---
import { getEntry } from "astro:content";
const digitalCourse = (await getEntry ("digitalskill","digitalcourse")).data
---
<section class="container position-relative  py-2 py-sm-3 py-md-4 py-lg-5"
 style="margin-top: -2rem; margin-bottom: -80px;">
    <div class="container z-2 py-5 mt-xl-2 mb-lg-2 mb-xl-3 mb-xxl-5 mt-xxl-4">
      <h2 class="h1 pt-xxl-1 pb-4 mb-2 mb-lg-3">{digitalCourse.heading}</h2>
      <div class="item-set d-flex justify-content-center align-item-center Item-container" style="gap:20px;">
            <div class="swiper-slide h-auto d-flex">
            <div class="card h-100 border-0 rounded-4 pb-3">
              <div class="position-relative" data-bs-theme="light">
                <img class="rounded-4 rounded-bottom-0 course-container" src={digitalCourse.image} alt="Guide">
              </div>
              <div class="card-body pb-4 course-container">
                <div class="text-primary fw-bold pb-2 mb-1">{digitalCourse.card1.price}</div>
                <h3 class="h4">{digitalCourse.card1.title}</h3>
                <ul class="fs-sm ps-4 mb-0">
                  <li class="mb-2">{digitalCourse.card1.list1}</li>
                  <li class="mb-2">{digitalCourse.card1.list2}</li>
                  </ul>
              </div>
              <div class="card-footer border-0 pt-0">
                <a class="btn btn-outline-primary w-100" href="/">{digitalCourse.enrollbtn}</a>
              </div>
            </div>
          </div>
           <div class="swiper-slide h-auto">
            <div class="card h-100 border-0 rounded-4 pb-3">
              <div class="position-relative" data-bs-theme="light">
                <img class="rounded-4 rounded-bottom-0 course-container" src={digitalCourse.image} alt="Guide">
              </div>
              <div class="card-body pb-4 course-container">
                <div class="text-primary fw-bold pb-2 mb-1">{digitalCourse.card2.price}</div>
                <h3 class="h4">{digitalCourse.card1.title}</h3>
               </div>
              <div class="card-footer border-0 pt-0">
                <a class="btn btn-outline-primary w-100" href="/">{digitalCourse.enrollbtn}</a>
              </div>
            </div>
          </div>
          <div class="swiper-slide h-auto">
            <div class="card h-100 border-0 rounded-4 pb-3">
              <div class="position-relative" data-bs-theme="light">
                <img class="rounded-4 rounded-bottom-0 course-container" src={digitalCourse.image} alt="Guide">
              </div>
              <div class="card-body pb-4 course-container">
                <div class="text-primary fw-bold pb-2 mb-1">{digitalCourse.card3.price}</div>
                <h3 class="h4">{digitalCourse.card3.title}</h3>
               </div>
              <div class="card-footer border-0 pt-0">
                <a class="btn btn-outline-primary w-100" href="/">{digitalCourse.enrollbtn}</a>
              </div>
            </div>
          </div>
        </div>
      </div>
        </div>
         
    </div>
  </section>
  
  <style>
    @media(max-width:430px){
      .course-container{
        width:390px;
      }
      .Item-container{
        width: 250px;
        margin: auto;
        flex-wrap: wrap;
      }
    }
  </style>
  