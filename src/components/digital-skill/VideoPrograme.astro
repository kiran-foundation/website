---
import { getEntry } from "astro:content";
const digitalVideoPrograme =(await getEntry("digitalskill","video-programe")).data
---

<section class="container position-relative py-2 py-sm-3 py-md-4 py-lg-5" style="margin-top: -8rem;">
    <div class="container  z-2 py-5 mt-xl-2 mb-lg-2 mb-xl-3 mb-xxl-5 mt-xxl-4">
      <h2 class="h1 pt-xxl-1 pb-4 mb-2 mb-lg-3">{digitalVideoPrograme.heading}</h2>
      <div class="item-set d-flex justify-content-center align-item-center Item-container" style="gap:20px;">
             <div class="swiper-slide h-auto d-flex">
            <div class="card h-100 border-0 rounded-4 pb-3">
              <div class="position-relative" data-bs-theme="light">
                <img class="rounded-4 rounded-bottom-0 course-container" src={digitalVideoPrograme.image} alt="Guide">
              </div>
              <div class="card-body pb-4 course-container">
                <div class="text-primary fw-bold pb-2 mb-1" style="margin-top: -10px;">{digitalVideoPrograme.card1.price}</div>
                <h3 class="h5 fw-bold">{digitalVideoPrograme.card1.subtitle}</h3>
                <ul class="fs-sm ps-4 mb-0">
                  <li class="mb-2">{digitalVideoPrograme.card1.list1}</li>
                  <li class="mb-2">{digitalVideoPrograme.card1.list2}</li>
                  <li class="mb-2">{digitalVideoPrograme.card1.list3}</li>
                </ul>
              </div>
              <div class="card-footer border-0 pt-0">
                <a class="btn btn-outline-primary w-100" style="margin-top: -15px;" href="/">{digitalVideoPrograme.watchBtn}</a>
              </div>
            </div>
          </div>
           <div class="swiper-slide h-auto">
            <div class="card h-100 border-0 rounded-4 pb-3">
              <div class="position-relative" data-bs-theme="light">
                <img class="rounded-4 rounded-bottom-0 course-container" src= {digitalVideoPrograme.image} alt="Guide">
              </div>
              <div class="card-body pb-4 course-container">
                <div class="text-primary fw-bold pb-2 mb-1" style="margin-top: -10px;">{digitalVideoPrograme.card2.price}</div>
                <h3 class="h5 fw-bold">{digitalVideoPrograme.card2.subtitle}</h3>
                <ul class="fs-sm ps-4 mb-0">
                  <li class="mb-2">{digitalVideoPrograme.card2.list1}</li>
                  <li class="mb-2">{digitalVideoPrograme.card2.list2}</li>
                  <li class="mb-2">{digitalVideoPrograme.card2.list3}</li>
                </ul>
              </div>
              <div class="card-footer border-0 pt-0">
                <a class="btn btn-outline-primary w-100" style="margin-top: -15px;" href="/">{digitalVideoPrograme.watchBtn}</a>
              </div>
            </div>
          </div>
          <div class="swiper-slide h-auto">
            <div class="card h-100 border-0 rounded-4 pb-3 course-container">
              <div class="position-relative" data-bs-theme="light">
                <img class="rounded-4 rounded-bottom-0 course-container" src={digitalVideoPrograme.image} alt="Guide">
              </div>
              <div class="card-body pb-4">
                <div class="text-primary fw-bold pb-2 mb-1" style="margin-top: -10px;">{digitalVideoPrograme.card3.price}</div>
                <h3 class="h5 fw-bold">{digitalVideoPrograme.card3.subtitle}</h3>
                <ul class="fs-sm ps-4 mb-0">
                  <li class="mb-2">{digitalVideoPrograme.card3.list1}</li>
                  <li class="mb-2">{digitalVideoPrograme.card3.list2}</li>
                  <li class="mb-2">{digitalVideoPrograme.card3.list3}</li>
                </ul>
              </div>
              <div class="card-footer border-0 pt-0">
                <a class="btn btn-outline-primary w-100" style="margin-top: -15px;" href="/">{digitalVideoPrograme.watchBtn}</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </section>

  <style>
    @media(max-width:430px){
      .course-container{
        width:390px;
      }
      .Item-container{
        width: 250px;
        margin: auto;
        flex-wrap: wrap;
      }
    }
  </style>