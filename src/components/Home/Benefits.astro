---
import { remark } from "remark";
import html from "remark-html";
const allHero = import.meta.glob("/src/content/benefits/*.md");
const benefits = await Promise.all(
  Object.values(allHero).map(async (benefitData) => {
    const { frontmatter, default: content } = await benefitData();
    const processedContent = await remark().use(html).process(content);
    return { ...frontmatter, content: processedContent.toString() };
  }),
);
