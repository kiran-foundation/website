---
const update = Astro.props.update;
---

<style>
  .styled-image {
    height: auto;
    max-width: 306px;
    border-radius: 8px;
    border: 1px solid #49494c1a;
  }
</style>
<a href={update.link}>
  <div>
    <div class="pb-4">
      <img src={update.featured_image} alt={update.alt} class="styled-image" />
    </div>
  </div>
  <p
    class="font-poppins font-normal text-base leading-6 tracking-[0px] text-[#1E1E1E] pb-12"
  >
    {update.title}
  </p>
</a>
